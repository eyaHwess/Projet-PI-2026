{% extends 'base.html.twig' %}

{% block title %}Goals{% endblock %}

{% block stylesheets %}
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        min-height: 100vh;
        padding: 40px 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .goals-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .goals-header {
        background: white;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .goals-title {
        font-size: 32px;
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    .btn-create {
        background: linear-gradient(135deg, #7ed321 0%, #6bc218 100%);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(126,211,33,0.3);
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(126,211,33,0.4);
        color: white;
    }

    .alert {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-left: 5px solid;
    }

    .alert-success {
        border-left-color: #7ed321;
        color: #6bc218;
    }

    .alert-warning {
        border-left-color: #ffc107;
        color: #ff9800;
    }

    .alert-danger {
        border-left-color: #f44336;
        color: #d32f2f;
    }

    .goals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
    }

    .goal-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

    .goal-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .goal-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .goal-title {
        font-size: 22px;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
    }

    .goal-description {
        color: #666;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 20px;
        min-height: 48px;
    }

    .goal-meta {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
    }

    .goal-meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        color: #666;
    }

    .goal-meta-item i {
        color: #667eea;
        width: 20px;
    }

    .goal-status {
        display: inline-block;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .goal-status.active {
        background: linear-gradient(135deg, #7ed321 0%, #6bc218 100%);
        color: white;
    }

    .goal-status.inactive {
        background: #e0e0e0;
        color: #666;
    }

    .goal-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 25px;
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-success {
        background: linear-gradient(135deg, #7ed321 0%, #6bc218 100%);
        color: white;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(126,211,33,0.3);
    }

    .btn-danger {
        background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
        color: white;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(244,67,54,0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #4c8bf5 0%, #2196F3 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(33,150,243,0.3);
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        cursor: not-allowed;
        opacity: 0.8;
    }

    .btn-warning:disabled {
        transform: none;
        box-shadow: none;
    }

    .btn-outline {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }

    .btn-outline:hover {
        background: #667eea;
        color: white;
    }

    .unread-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: #f44336;
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(244, 67, 54, 0.4);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }

    .empty-state {
        background: white;
        border-radius: 20px;
        padding: 60px 40px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .empty-state-icon {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .empty-state-title {
        font-size: 24px;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .empty-state-text {
        color: #666;
        margin-bottom: 30px;
    }

    @media (max-width: 768px) {
        .goals-grid {
            grid-template-columns: 1fr;
        }

        .goals-header {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="goals-container">
    
    <!-- Header -->
    <div class="goals-header">
        <h1 class="goals-title">ðŸŽ¯ Goals</h1>
        <a href="{{ path('goal_new') }}" class="btn-create">
            <i class="fas fa-plus"></i>
            CrÃ©er un Goal
        </a>
    </div>

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            <i class="fas fa-times-circle"></i> {{ message }}
        </div>
    {% endfor %}

    <!-- Goals Grid -->
    {% if goals|length > 0 %}
        <div class="goals-grid">
            {% for goal in goals %}
                <div class="goal-card">
                    <h3 class="goal-title">{{ goal.title }}</h3>
                    <p class="goal-description">{{ goal.description|slice(0, 100) }}{% if goal.description|length > 100 %}...{% endif %}</p>
                    
                    <div class="goal-meta">
                        <div class="goal-meta-item">
                            <i class="fas fa-calendar"></i>
                            <span>{{ goal.startDate|date('d/m/Y') }} - {{ goal.endDate|date('d/m/Y') }}</span>
                        </div>
                        <div class="goal-meta-item">
                            <i class="fas fa-users"></i>
                            <span>{{ goal.goalParticipations|length }} participant(s)</span>
                        </div>
                        <div class="goal-meta-item">
                            <i class="fas fa-flag"></i>
                            <span class="goal-status {{ goal.status == 'active' ? 'active' : 'inactive' }}">
                                {{ goal.status }}
                            </span>
                        </div>
                    </div>

                    <div class="goal-actions">
                        {% set userParticipation = null %}
                        {% if app.user %}
                            {% for participation in goal.goalParticipations %}
                                {% if participation.user.id == app.user.id %}
                                    {% set userParticipation = participation %}
                                {% endif %}
                            {% endfor %}
                        {% endif %}

                        {% if app.user %}
                            {% if userParticipation %}
                                {% if userParticipation.isPending() %}
                                    <button class="btn btn-warning" disabled>
                                        <i class="fas fa-clock"></i> En attente d'approbation
                                    </button>
                                {% elseif userParticipation.isApproved() %}
                                    <a href="{{ path('goal_leave', {id: goal.id}) }}" class="btn btn-danger">
                                        <i class="fas fa-sign-out-alt"></i> Quitter
                                    </a>
                                {% endif %}
                            {% else %}
                                <a href="{{ path('goal_join', {id: goal.id}) }}" class="btn btn-success">
                                    <i class="fas fa-user-plus"></i> Rejoindre
                                </a>
                            {% endif %}
                        {% endif %}

                        {% if goal.chatroom is not null %}
                            <a href="{{ path('goal_messages', {id: goal.id}) }}" class="btn btn-primary" style="position: relative;">
                                <i class="fas fa-comments"></i> Chatroom
                                {% if app.user %}
                                    {% set unreadCount = readReceiptRepo.getUnreadCountForUserInChatroom(app.user, goal.chatroom.id) %}
                                    {% if unreadCount > 0 %}
                                        <span class="unread-badge">{{ unreadCount }}</span>
                                    {% endif %}
                                {% endif %}
                            </a>
                        {% endif %}

                        <a href="{{ path('goal_show', {id: goal.id}) }}" class="btn btn-outline">
                            <i class="fas fa-eye"></i> DÃ©tails
                        </a>

                        {% if app.user and goal.canUserModifyGoal(app.user) %}
                            <a href="{{ path('goal_edit', {id: goal.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        {% endif %}

                        {% if app.user and goal.canUserDeleteGoal(app.user) %}
                            <form method="post" action="{{ path('goal_delete', {id: goal.id}) }}" style="display: inline;" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer ce goal ? Cette action est irrÃ©versible.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ goal.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">ðŸŽ¯</div>
            <h2 class="empty-state-title">Aucun Goal pour le moment</h2>
            <p class="empty-state-text">CrÃ©ez votre premier goal et commencez votre aventure!</p>
            <a href="{{ path('goal_new') }}" class="btn-create">
                <i class="fas fa-plus"></i>
                CrÃ©er mon premier Goal
            </a>
        </div>
    {% endif %}

</div>
{% endblock %}
