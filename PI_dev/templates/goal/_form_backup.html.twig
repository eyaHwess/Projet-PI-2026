{% extends 'base.html.twig' %}

{% block body %}

{{ form_start(form, {
    'action': (goal is defined and goal.id) 
        ? path('app_goal_edit', {id: goal.id}) 
        : path('app_goal_new'),
    'method': 'POST',
    'attr': {'class': 'needs-validation', 'novalidate': ''}
}) }}

<div class="row g-3">
    <div class="col-12">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Perdre 5 kg'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="col-12">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'DÃ©crivez votre objectif...'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.startDate, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.startDate, {'attr': {'class': 'form-control form-control-lg'}}) }}
        {{ form_errors(form.startDate) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.endDate, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.endDate, {'attr': {'class': 'form-control form-control-lg'}}) }}
        {{ form_errors(form.endDate) }}
    </div>

    <div class="col-12">
        {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select form-select-lg'}}) }}
        {{ form_errors(form.status) }}
    </div>
</div>

<div class="d-flex gap-3 mt-4 pt-4 border-top">
    <button type="submit" class="btn btn-orange flex-grow-1">
        Enregistrer
    </button>
    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
        Annuler
    </button>
</div>

{{ form_end(form) }}

{% endblock %}
