{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">{{ goal.title }}</h2>
                    
                    <span class="badge bg-{{ goal.status == 'active' ? 'success' : 'secondary' }} mb-3">
                        {{ goal.status }}
                    </span>

                    <p class="card-text">{{ goal.description }}</p>

                    <div class="mb-3">
                        <strong>Dates:</strong><br>
                        <i class="fas fa-calendar-start"></i> Début: {{ goal.startDate|date('d/m/Y') }}<br>
                        <i class="fas fa-calendar-end"></i> Fin: {{ goal.endDate|date('d/m/Y') }}
                    </div>

                    <div class="d-flex gap-2">
                        {% set isParticipating = false %}
                        {% for participation in goal.goalParticipations %}
                            {% if participation.user.id == app.user.id %}
                                {% set isParticipating = true %}
                            {% endif %}
                        {% endfor %}

                        {% if isParticipating %}
                            {% if goal.chatroom is not null %}
                                <a href="{{ path('chatroom_show', {id: goal.chatroom.id}) }}" 
                                   class="btn btn-primary">
                                    <i class="fas fa-comments"></i> Accéder au Chatroom
                                </a>
                            {% endif %}
                            <a href="{{ path('goal_leave', {id: goal.id}) }}" 
                               class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i> Quitter
                            </a>
                        {% else %}
                            <a href="{{ path('goal_join', {id: goal.id}) }}" 
                               class="btn btn-success">
                                <i class="fas fa-plus"></i> Rejoindre ce Goal
                            </a>
                        {% endif %}

                        <a href="{{ path('goal_list') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5><i class="fas fa-users"></i> Participants ({{ goal.goalParticipations|length }})</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {% for participation in goal.goalParticipations %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ participation.user.firstName }} {{ participation.user.lastName }}</strong>
                                    <br>
                                    <small class="text-muted">
                                        Rejoint le {{ participation.createdAt|date('d/m/Y') }}
                                    </small>
                                </div>
                                {% if participation.user.id == app.user.id %}
                                    <span class="badge bg-primary">Vous</span>
                                {% endif %}
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">
                                Aucun participant pour le moment.
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
