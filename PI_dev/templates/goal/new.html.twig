{% extends 'base_modern.html.twig' %}

{% block title %}Nouvel Objectif{% endblock %}

{% block navbar_actions %}
    <a href="{{ path('app_goal_index') }}" class="btn-modern btn-modern-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header-modern">
        <h1 class="page-header-modern-title">
            <i class="bi bi-plus-circle" style="color: var(--primary-color);"></i>
            Nouvel Objectif
        </h1>
        <p class="page-header-modern-subtitle">
            Créez un nouvel objectif de fitness et bien-être
        </p>
    </div>

    <!-- Form Card -->
    <div class="card-modern" style="max-width: 800px; margin: 0 auto;">
        <div class="card-modern-header">
            <h2 style="font-size: var(--font-size-xl); font-weight: 700; margin: 0; color: var(--gray-900);">
                <i class="bi bi-bullseye"></i> Informations de l'objectif
            </h2>
        </div>

        {{ include('goal/_form.html.twig') }}
    </div>
{% endblock %}
