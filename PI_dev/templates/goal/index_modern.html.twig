{% extends 'base_modern.html.twig' %}

{% block title %}Mes Objectifs{% endblock %}

{% block breadcrumb %}
    <nav class="breadcrumb-modern">
        <a href="{{ path('app_home') }}">Accueil</a>
        <span class="breadcrumb-modern-separator">/</span>
        <span>Mes Objectifs</span>
    </nav>
{% endblock %}

{% block navbar_actions %}
    <button class="btn-modern btn-modern-primary" onclick="openGoalModal('new')">
        <i class="bi bi-plus-circle"></i> Nouvel Objectif
    </button>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Stats Overview */
        .stats-overview {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-lg);
            margin-bottom: var(--space-2xl);
        }
        
        .stat-card-enhanced {
            background: linear-gradient(135deg, var(--white) 0%, var(--gray-50) 100%);
            border-radius: var(--radius-lg);
            padding: var(--space-xl);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
            transition: all var(--transition-base);
            position: relative;
            overflow: hidden;
        }
        
        .stat-card-enhanced::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            transition: width var(--transition-base);
        }
        
        .stat-card-enhanced:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }
        
        .stat-card-enhanced:hover::before {
            width: 100%;
            opacity: 0.1;
        }
        
        .stat-card-enhanced.active { border-left-color: var(--accent-teal); }
        .stat-card-enhanced.completed { border-left-color: var(--accent-green); }
        .stat-card-enhanced.paused { border-left-color: var(--accent-orange); }
        .stat-card-enhanced.failed { border-left-color: var(--danger); }
        
        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: var(--space-md);
            background: var(--primary-lightest);
            color: var(--primary-color);
        }
        
        .stat-value {
            font-size: var(--font-size-3xl);
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--space-xs);
        }
        
        .stat-label {
            font-size: var(--font-size-sm);
            color: var(--gray-600);
            font-weight: 500;
        }
        
        /* Enhanced Filters */
        .filters-enhanced {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-xl);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
            margin-bottom: var(--space-xl);
        }
        
        .filter-group {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            flex-wrap: wrap;
        }
        
        .filter-item {
            flex: 1;
            min-width: 200px;
        }
        
        .filter-item label {
            display: block;
            font-size: var(--font-size-sm);
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: var(--space-xs);
        }
        
        .search-enhanced {
            position: relative;
            flex: 2;
            min-width: 300px;
        }
        
        .search-enhanced input {
            padding-left: 3rem;
            padding-right: 3rem;
        }
        
        .search-enhanced .search-icon {
            position: absolute;
            left: var(--space-md);
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-500);
            font-size: var(--font-size-lg);
        }
        
        .search-enhanced .clear-search {
            position: absolute;
            right: var(--space-md);
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--gray-400);
            cursor: pointer;
            font-size: var(--font-size-lg);
            display: none;
        }
        
        .search-enhanced input:not(:placeholder-shown) + .search-icon + .clear-search {
            display: block;
        }
        
        /* Enhanced Goal Cards */
        .goal-card-enhanced {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-xl);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
            transition: all var(--transition-base);
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }
        
        .goal-card-enhanced::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            transition: width var(--transition-base);
        }
        
        .goal-card-enhanced:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-light);
        }
        
        .goal-card-enhanced:hover::before {
            width: 6px;
        }
        
        .goal-card-enhanced.active::before { background: var(--accent-teal); }
        .goal-card-enhanced.completed::before { background: var(--accent-green); }
        .goal-card-enhanced.paused::before { background: var(--accent-orange); }
        .goal-card-enhanced.failed::before { background: var(--danger); }
        
        .goal-header-enhanced {
            display: flex;
            align-items: flex-start;
            gap: var(--space-lg);
            margin-bottom: var(--space-lg);
        }
        
        .goal-icon-enhanced {
            width: 64px;
            height: 64px;
            border-radius: var(--radius-md);
            background: linear-gradient(135deg, var(--primary-lightest) 0%, var(--primary-lighter) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            color: var(--primary-color);
            flex-shrink: 0;
            transition: transform var(--transition-base);
        }
        
        .goal-card-enhanced:hover .goal-icon-enhanced {
            transform: scale(1.1) rotate(5deg);
        }
        
        .goal-content-enhanced {
            flex: 1;
            min-width: 0;
        }
        
        .goal-title-enhanced {
            font-size: var(--font-size-xl);
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--space-xs);
            line-height: 1.3;
        }
        
        .goal-description-enhanced {
            color: var(--gray-600);
            font-size: var(--font-size-sm);
            line-height: 1.5;
            margin-bottom: var(--space-md);
        }
        
        .badges-container {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-sm);
            margin-bottom: var(--space-lg);
        }
        
        /* Enhanced Progress */
        .progress-container-enhanced {
            margin-bottom: var(--space-lg);
        }
        
        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-sm);
        }
        
        .progress-label {
            font-size: var(--font-size-sm);
            font-weight: 600;
            color: var(--gray-700);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .progress-percentage {
            font-size: var(--font-size-xl);
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-teal) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .progress-bar-enhanced {
            height: 12px;
            background: var(--gray-200);
            border-radius: var(--radius-full);
            overflow: hidden;
            position: relative;
        }
        
        .progress-bar-filled {
            height: 100%;
            background: linear-gradient(90deg, var(--primary-color) 0%, var(--accent-teal) 100%);
            border-radius: var(--radius-full);
            transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }
        
        .progress-bar-filled::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shimmer 2s infinite;
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }
        
        /* Meta Info Enhanced */
        .meta-info-enhanced {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-lg);
            padding: var(--space-md);
            background: var(--gray-50);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-lg);
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: var(--space-sm);
            font-size: var(--font-size-sm);
            color: var(--gray-700);
        }
        
        .meta-item i {
            color: var(--primary-color);
            font-size: var(--font-size-lg);
        }
        
        /* Actions Enhanced */
        .actions-enhanced {
            display: flex;
            gap: var(--space-sm);
            flex-wrap: wrap;
            padding-top: var(--space-md);
            border-top: 1px solid var(--gray-200);
        }
        
        .action-btn {
            flex: 1;
            min-width: 100px;
            padding: var(--space-sm) var(--space-md);
            border-radius: var(--radius-md);
            font-size: var(--font-size-sm);
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all var(--transition-base);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-xs);
        }
        
        .action-btn-edit {
            background: var(--primary-lightest);
            color: var(--primary-color);
        }
        
        .action-btn-edit:hover {
            background: var(--primary-lighter);
            transform: translateY(-2px);
        }
        
        .action-btn-duplicate {
            background: var(--gray-100);
            color: var(--gray-700);
        }
        
        .action-btn-duplicate:hover {
            background: var(--gray-200);
            transform: translateY(-2px);
        }
        
        .action-btn-delete {
            background: #FFEBEE;
            color: var(--danger);
        }
        
        .action-btn-delete:hover {
            background: #FFCDD2;
            transform: translateY(-2px);
        }
        
        /* Empty State Enhanced */
        .empty-state-enhanced {
            text-align: center;
            padding: var(--space-2xl);
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            border: 2px dashed var(--gray-300);
        }
        
        .empty-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto var(--space-xl);
            background: linear-gradient(135deg, var(--primary-lightest) 0%, var(--primary-lighter) 100%);
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: var(--primary-color);
            animation: pulse 2s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        .empty-title {
            font-size: var(--font-size-3xl);
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--space-md);
        }
        
        .empty-description {
            font-size: var(--font-size-lg);
            color: var(--gray-600);
            margin-bottom: var(--space-xl);
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        /* Layout Toggle Enhanced */
        .layout-toggle-enhanced {
            display: flex;
            background: var(--gray-100);
            border-radius: var(--radius-full);
            padding: 4px;
            gap: 4px;
        }
        
        .layout-toggle-btn {
            padding: var(--space-xs) var(--space-md);
            border: none;
            background: transparent;
            color: var(--gray-600);
            border-radius: var(--radius-full);
            cursor: pointer;
            transition: all var(--transition-base);
            font-size: var(--font-size-lg);
        }
        
        .layout-toggle-btn.active {
            background: var(--white);
            color: var(--primary-color);
            box-shadow: var(--shadow-sm);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .stats-overview {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .filter-group {
                flex-direction: column;
            }
            
            .filter-item,
            .search-enhanced {
                width: 100%;
                min-width: 100%;
            }
            
            .goal-header-enhanced {
                flex-direction: column;
            }
            
            .meta-info-enhanced {
                flex-direction: column;
                gap: var(--space-sm);
            }
            
            .actions-enhanced {
                flex-direction: column;
            }
            
            .action-btn {
                width: 100%;
            }
        }
        
        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .goal-card-enhanced {
            animation: fadeInUp 0.5s ease forwards;
        }
        
        .goal-card-enhanced:nth-child(1) { animation-delay: 0.1s; }
        .goal-card-enhanced:nth-child(2) { animation-delay: 0.2s; }
        .goal-card-enhanced:nth-child(3) { animation-delay: 0.3s; }
        .goal-card-enhanced:nth-child(4) { animation-delay: 0.4s; }
        .goal-card-enhanced:nth-child(5) { animation-delay: 0.5s; }
        .goal-card-enhanced:nth-child(6) { animation-delay: 0.6s; }
    </style>
{% endblock %}

{% block body %}
    <!-- Stats Overview -->
    {% set activeCount = pagination|filter(g => g.status == 'active')|length %}
    {% set completedCount = pagination|filter(g => g.status == 'completed')|length %}
    {% set pausedCount = pagination|filter(g => g.status == 'paused')|length %}
    {% set failedCount = pagination|filter(g => g.status == 'failed')|length %}
    
    {% if pagination|length > 0 %}
    <div class="stats-overview">
        <div class="stat-card-enhanced active">
            <div class="stat-icon">
                <i class="bi bi-play-circle-fill"></i>
            </div>
            <div class="stat-value">{{ activeCount }}</div>
            <div class="stat-label">Actifs</div>
        </div>
        <div class="stat-card-enhanced completed">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-value">{{ completedCount }}</div>
            <div class="stat-label">Termin√©s</div>
        </div>
        <div class="stat-card-enhanced paused">
            <div class="stat-icon">
                <i class="bi bi-pause-circle-fill"></i>
            </div>
            <div class="stat-value">{{ pausedCount }}</div>
            <div class="stat-label">En pause</div>
        </div>
        <div class="stat-card-enhanced failed">
            <div class="stat-icon">
                <i class="bi bi-x-circle-fill"></i>
            </div>
            <div class="stat-value">{{ failedCount }}</div>
            <div class="stat-label">√âchou√©s</div>
        </div>
    </div>
    {% endif %}

    <!-- Page Header -->
    <div class="page-header-modern">
        <h1 class="page-header-modern-title">
            <i class="bi bi-bullseye" style="color: var(--primary-color);"></i>
            Mes Objectifs
        </h1>
        <p class="page-header-modern-subtitle">
            G√©rez vos objectifs de fitness et bien-√™tre avec un suivi d√©taill√© de vos progr√®s
        </p>
    </div>

    <!-- Enhanced Filters -->
    <div class="filters-enhanced">
        <div class="filter-group">
            <div class="search-enhanced">
                <i class="bi bi-search search-icon"></i>
                <input type="text" 
                       id="searchInput" 
                       class="form-control-modern" 
                       placeholder="Rechercher un objectif..."
                       value="{{ searchQuery }}">
                <button class="clear-search" onclick="clearSearch()">
                    <i class="bi bi-x-circle"></i>
                </button>
            </div>
            
            <div class="filter-item">
                <label><i class="bi bi-funnel"></i> Statut</label>
                <select id="statusFilter" class="form-control-modern form-select-modern">
                    <option value="all" {{ currentStatus == 'all' ? 'selected' : '' }}>Tous les statuts</option>
                    <option value="draft" {{ currentStatus == 'draft' ? 'selected' : '' }}>Brouillon</option>
                    <option value="active" {{ currentStatus == 'active' ? 'selected' : '' }}>Actif</option>
                    <option value="paused" {{ currentStatus == 'paused' ? 'selected' : '' }}>En pause</option>
                    <option value="completed" {{ currentStatus == 'completed' ? 'selected' : '' }}>Termin√©</option>
                    <option value="failed" {{ currentStatus == 'failed' ? 'selected' : '' }}>√âchou√©</option>
                    <option value="archived" {{ currentStatus == 'archived' ? 'selected' : '' }}>Archiv√©</option>
                </select>
            </div>
            
            <div class="filter-item">
                <label><i class="bi bi-sort-down"></i> Trier par</label>
                <select id="sortSelect" class="form-control-modern form-select-modern">
                    <option value="urgency-DESC" {{ currentSort == 'urgency' and currentOrder == 'DESC' ? 'selected' : '' }}>‚ö° Plus urgent</option>
                    <option value="createdAt-DESC" {{ currentSort == 'createdAt' and currentOrder == 'DESC' ? 'selected' : '' }}>Plus r√©cent</option>
                    <option value="createdAt-ASC" {{ currentSort == 'createdAt' and currentOrder == 'ASC' ? 'selected' : '' }}>Plus ancien</option>
                    <option value="deadline-ASC" {{ currentSort == 'deadline' and currentOrder == 'ASC' ? 'selected' : '' }}>Deadline (proche)</option>
                    <option value="title-ASC" {{ currentSort == 'title' and currentOrder == 'ASC' ? 'selected' : '' }}>Titre (A-Z)</option>
                </select>
            </div>
            
            <div class="filter-item" style="min-width: auto;">
                <label style="opacity: 0;">View</label>
                <div class="layout-toggle-enhanced">
                    <button class="layout-toggle-btn" data-layout="list" title="Vue liste">
                        <i class="bi bi-list-ul"></i>
                    </button>
                    <button class="layout-toggle-btn active" data-layout="grid" title="Vue grille">
                        <i class="bi bi-grid-3x3-gap"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Goals List -->
    {% if pagination|length > 0 %}
        <div class="grid-modern grid-modern-3" id="goalsContainer">
            {% for goal in pagination %}
                <div class="goal-card-enhanced {{ goal.status }}" 
                     data-goal-id="{{ goal.id }}" 
                     onclick="window.location.href='{{ path('app_goal_show', {id: goal.id}) }}'">
                    <div class="goal-header-enhanced">
                        <div class="goal-icon-enhanced">
                            <i class="bi bi-bullseye"></i>
                        </div>
                        <div class="goal-content-enhanced">
                            <h3 class="goal-title-enhanced">{{ goal.title }}</h3>
                            {% if goal.description %}
                                <p class="goal-description-enhanced">
                                    {{ goal.description|slice(0, 100) }}{% if goal.description|length > 100 %}...{% endif %}
                                </p>
                            {% endif %}
                            
                            <div class="badges-container">
                                <span class="badge-modern badge-modern-{{ goal.status == 'active' ? 'success' : (goal.status == 'completed' ? 'info' : (goal.status == 'failed' ? 'danger' : 'warning')) }}">
                                    {{ goal.status|upper }}
                                </span>
                                
                                {% if goal.getPriority() %}
                                    <span class="badge-modern badge-modern-{{ goal.getPriority() == 'high' ? 'danger' : (goal.getPriority() == 'medium' ? 'warning' : 'success') }}">
                                        {% if goal.getPriority() == 'high' %}üî¥ HAUTE
                                        {% elseif goal.getPriority() == 'medium' %}üü° MOYENNE
                                        {% else %}üü¢ BASSE{% endif %}
                                    </span>
                                {% endif %}
                                
                                {% if goal.isAtRisk() %}
                                    <span class="badge-modern badge-modern-danger">
                                        <i class="bi bi-exclamation-triangle-fill"></i> AT RISK
                                    </span>
                                {% elseif goal.isDeadlineNear() %}
                                    <span class="badge-modern badge-modern-warning">
                                        <i class="bi bi-alarm"></i> Deadline proche
                                    </span>
                                {% endif %}
                            </div>
                            
                            <div class="progress-container-enhanced">
                                <div class="progress-header">
                                    <span class="progress-label">Progression</span>
                                    <span class="progress-percentage">{{ goal.progressPercentage }}%</span>
                                </div>
                                <div class="progress-bar-enhanced">
                                    <div class="progress-bar-filled" style="width: {{ goal.progressPercentage }}%;"></div>
                                </div>
                            </div>
                            
                            <div class="meta-info-enhanced">
                                <div class="meta-item">
                                    <i class="bi bi-calendar-event"></i>
                                    <span>{{ goal.startDate|date('d/m/Y') }} - {{ goal.deadline ? goal.deadline|date('d/m/Y') : goal.endDate|date('d/m/Y') }}</span>
                                </div>
                                <div class="meta-item">
                                    <i class="bi bi-list-ul"></i>
                                    <span>{{ goal.routines|length }} Routine(s)</span>
                                </div>
                                {% if goal.getTimeRemaining() %}
                                <div class="meta-item">
                                    <i class="bi bi-clock"></i>
                                    <span>{{ goal.getTimeRemaining() }}</span>
                                </div>
                                {% endif %}
                            </div>
                            
                            <div class="actions-enhanced">
                                <button class="action-btn action-btn-edit" 
                                        onclick="event.stopPropagation(); openGoalModal('edit', {{ goal.id }})">
                                    <i class="bi bi-pencil"></i> Modifier
                                </button>
                                <button class="action-btn action-btn-duplicate" 
                                        onclick="event.stopPropagation(); duplicateGoal({{ goal.id }}, '{{ goal.title }}', '{{ csrf_token('duplicate' ~ goal.id) }}')">
                                    <i class="bi bi-files"></i> Dupliquer
                                </button>
                                <button class="action-btn action-btn-delete" 
                                        onclick="event.stopPropagation(); deleteGoal({{ goal.id }}, '{{ goal.title }}', '{{ csrf_token('delete' ~ goal.id) }}')">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Enhanced Empty State -->
        <div class="empty-state-enhanced">
            <div class="empty-icon">
                <i class="bi bi-bullseye"></i>
            </div>
            <h2 class="empty-title">Commencez votre parcours</h2>
            <p class="empty-description">
                Cr√©ez votre premier objectif pour suivre vos progr√®s et atteindre vos objectifs de fitness et bien-√™tre
            </p>
            <button class="btn-modern btn-modern-primary btn-modern-lg" onclick="openGoalModal('new')">
                <i class="bi bi-plus-circle"></i> Cr√©er mon premier objectif
            </button>
        </div>
    {% endif %}
    
    <!-- Modern Pagination -->
    {% if pagination.pageCount > 1 %}
    <div class="pagination-container" style="margin-top: var(--space-2xl); display: flex; justify-content: center; align-items: center; gap: var(--space-sm);">
        <style>
            .pagination-container {
                padding: var(--space-lg);
            }
            
            .pagination-modern {
                display: flex;
                gap: var(--space-xs);
                list-style: none;
                padding: 0;
                margin: 0;
                align-items: center;
            }
            
            .pagination-modern li {
                display: inline-block;
            }
            
            .pagination-modern a,
            .pagination-modern span {
                display: flex;
                align-items: center;
                justify-content: center;
                min-width: 40px;
                height: 40px;
                padding: 0 var(--space-md);
                border-radius: var(--radius-md);
                font-weight: 600;
                font-size: var(--font-size-sm);
                transition: all 0.2s ease;
                text-decoration: none;
                border: 2px solid transparent;
            }
            
            .pagination-modern a {
                background: white;
                color: var(--gray-700);
                border-color: var(--gray-200);
            }
            
            .pagination-modern a:hover {
                background: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
            }
            
            .pagination-modern .current {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                color: white;
                border-color: var(--primary-color);
                box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
                cursor: default;
            }
            
            .pagination-modern .disabled {
                background: var(--gray-100);
                color: var(--gray-400);
                border-color: var(--gray-200);
                cursor: not-allowed;
                opacity: 0.5;
            }
            
            .pagination-modern .disabled:hover {
                transform: none;
                box-shadow: none;
            }
            
            .pagination-info {
                color: var(--gray-600);
                font-size: var(--font-size-sm);
                margin-left: var(--space-lg);
                padding: var(--space-sm) var(--space-md);
                background: var(--gray-50);
                border-radius: var(--radius-md);
                font-weight: 500;
            }
            
            .pagination-modern .prev-next {
                font-weight: 700;
                min-width: 100px;
            }
            
            .pagination-modern .prev-next i {
                font-size: 14px;
            }
        </style>
        
        <nav aria-label="Navigation de pagination">
            <ul class="pagination-modern">
                {% if pagination.currentPageNumber > 1 %}
                    <li>
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: pagination.currentPageNumber - 1})) }}" class="prev-next">
                            <i class="bi bi-chevron-left"></i> Pr√©c√©dent
                        </a>
                    </li>
                {% else %}
                    <li>
                        <span class="disabled prev-next">
                            <i class="bi bi-chevron-left"></i> Pr√©c√©dent
                        </span>
                    </li>
                {% endif %}
                
                {% for page in 1..pagination.pageCount %}
                    {% if page == pagination.currentPageNumber %}
                        <li>
                            <span class="current">{{ page }}</span>
                        </li>
                    {% elseif page == 1 or page == pagination.pageCount or (page >= pagination.currentPageNumber - 2 and page <= pagination.currentPageNumber + 2) %}
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: page})) }}">
                                {{ page }}
                            </a>
                        </li>
                    {% elseif page == pagination.currentPageNumber - 3 or page == pagination.currentPageNumber + 3 %}
                        <li>
                            <span style="color: var(--gray-400); padding: 0 var(--space-xs);">...</span>
                        </li>
                    {% endif %}
                {% endfor %}
                
                {% if pagination.currentPageNumber < pagination.pageCount %}
                    <li>
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: pagination.currentPageNumber + 1})) }}" class="prev-next">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                {% else %}
                    <li>
                        <span class="disabled prev-next">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </span>
                    </li>
                {% endif %}
            </ul>
        </nav>
        
        <div class="pagination-info">
            <i class="bi bi-info-circle"></i>
            Page {{ pagination.currentPageNumber }} sur {{ pagination.pageCount }}
            ({{ pagination.totalItemCount }} objectif{{ pagination.totalItemCount > 1 ? 's' : '' }})
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Modal functions
        function openGoalModal(action, goalId = null) {
            const url = action === 'new' 
                ? '{{ path('app_goal_new') }}'
                : '{{ path('app_goal_edit', {id: '__ID__'}) }}'.replace('__ID__', goalId);
            
            window.location.href = url;
        }
        
        // Clear search
        function clearSearch() {
            document.getElementById('searchInput').value = '';
            applyFilters();
        }
        
        // Favorite toggle
        async function toggleFavorite(goalId, button) {
            try {
                const response = await fetch(`/goal/${goalId}/toggle-favorite`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Accept': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    const icon = button.querySelector('i');
                    if (data.isFavorite) {
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        button.style.color = 'var(--danger)';
                    } else {
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        button.style.color = 'var(--gray-400)';
                    }
                    button.dataset.isFavorite = data.isFavorite ? 'true' : 'false';
                    showToast(data.message, 'success');
                } else {
                    showToast('Erreur lors de la mise √† jour', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Erreur lors de la mise √† jour', 'error');
            }
        }
        
        // Duplicate goal
        async function duplicateGoal(goalId, title, csrfToken) {
            if (!confirm(`Voulez-vous dupliquer l'objectif "${title}" ?`)) {
                return;
            }
            
            try {
                const response = await fetch(`/goals/${goalId}/duplicate`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `_token=${encodeURIComponent(csrfToken)}`
                });
                
                const data = await response.json();
                if (data.success) {
                    showToast(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.message || 'Erreur lors de la duplication', 'error');
                }
            } catch (error) {
                showToast('Erreur lors de la duplication', 'error');
            }
        }
        
        // Delete goal
        async function deleteGoal(goalId, title, csrfToken) {
            if (!confirm(`√ätes-vous s√ªr de vouloir supprimer "${title}" ?\n\nCette action supprimera √©galement toutes les routines et activit√©s associ√©es.`)) {
                return;
            }
            
            try {
                const response = await fetch(`/goals/${goalId}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `_token=${encodeURIComponent(csrfToken)}`
                });
                
                const data = await response.json();
                if (data.success) {
                    showToast(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.message || 'Erreur lors de la suppression', 'error');
                }
            } catch (error) {
                showToast('Erreur lors de la suppression', 'error');
            }
        }
        
        // Filters
        const sortSelect = document.getElementById('sortSelect');
        const statusFilter = document.getElementById('statusFilter');
        const searchInput = document.getElementById('searchInput');
        let searchTimeout;
        
        if (sortSelect) {
            sortSelect.addEventListener('change', applyFilters);
        }
        
        if (statusFilter) {
            statusFilter.addEventListener('change', applyFilters);
        }
        
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(applyFilters, 500);
            });
        }
        
        function applyFilters() {
            const sortValue = sortSelect ? sortSelect.value : 'createdAt-DESC';
            const statusValue = statusFilter ? statusFilter.value : 'all';
            const searchValue = searchInput ? searchInput.value : '';
            
            const [sort, order] = sortValue.split('-');
            
            const url = new URL(window.location.href);
            url.searchParams.set('sort', sort);
            url.searchParams.set('order', order);
            url.searchParams.set('status', statusValue);
            
            if (searchValue) {
                url.searchParams.set('search', searchValue);
            } else {
                url.searchParams.delete('search');
            }
            
            window.location.href = url.toString();
        }
        
        // Layout toggle
        const layoutToggles = document.querySelectorAll('.layout-toggle-btn');
        const goalsContainer = document.getElementById('goalsContainer');
        
        layoutToggles.forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();
                layoutToggles.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                const layout = this.dataset.layout;
                if (layout === 'grid') {
                    goalsContainer.classList.remove('grid-modern-1');
                    goalsContainer.classList.add('grid-modern-3');
                } else {
                    goalsContainer.classList.remove('grid-modern-3');
                    goalsContainer.classList.add('grid-modern-1');
                }
                
                localStorage.setItem('goalsLayout', layout);
            });
        });
        
        // Load saved layout
        const savedLayout = localStorage.getItem('goalsLayout') || 'grid';
        if (savedLayout === 'list') {
            goalsContainer.classList.remove('grid-modern-3');
            goalsContainer.classList.add('grid-modern-1');
            layoutToggles.forEach(btn => {
                if (btn.dataset.layout === 'list') {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }
    </script>

{% endblock %}
