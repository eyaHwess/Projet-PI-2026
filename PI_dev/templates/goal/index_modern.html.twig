{% extends 'base.html.twig' %}

{% block title %}Mes Objectifs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root {
            --pastel-blue: #A8D8EA;
            --pastel-blue-light: #E8F6F9;
            --pastel-pink: #FFB3D9;
            --pastel-pink-light: #FFE4E9;
            --pastel-green: #B5EAD7;
            --pastel-green-light: #E8F8F3;
            --pastel-purple: #E2C2E8;
            --pastel-purple-light: #F5EDF7;
            --pastel-orange: #FFD1A3;
            --pastel-orange-light: #FFF5E8;
            --pastel-yellow: #FFE5B4;
        }
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #F8FCFE 0%, #F0F8FF 100%);
            min-height: 100vh;
        }
        .hero-section {
            background: linear-gradient(135deg, var(--pastel-blue-light) 0%, #F0F8FF 50%, var(--pastel-pink-light) 100%);
            padding: 3rem 0 2rem;
            margin-bottom: 2rem;
            border-radius: 0 0 2rem 2rem;
            box-shadow: 0 4px 20px rgba(168, 216, 234, 0.15);
            position: relative;
            overflow: hidden;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(255, 179, 217, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
        }
        .hero-section::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(168, 216, 234, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
        }
        .welcome-badge {
            background: white;
            border: 2px solid var(--pastel-green);
            color: #2D6A5C;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 12px rgba(181, 234, 215, 0.3);
        }
        .stats-card {
            background: white;
            border: 2px solid;
            border-radius: 1.25rem;
            padding: 1.75rem;
            text-align: center;
            transition: all 0.3s;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        }
        .stats-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
        }
        .stats-icon {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 0.75rem;
        }
        .stats-number {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.25rem;
            color: #2C5F7F;
        }
        .stats-label {
            color: #5A7C8F;
            font-weight: 600;
            font-size: 0.9rem;
        }
        .content-card {
            background: white;
            border: 2px solid #E8F6F9;
            border-radius: 1.25rem;
            overflow: hidden;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
            transition: all 0.3s;
        }
        .content-card:hover {
            border-color: var(--pastel-blue);
            box-shadow: 0 8px 28px rgba(168, 216, 234, 0.2);
        }
        .content-card-header {
            background: linear-gradient(135deg, var(--pastel-blue-light), #F0F8FF);
            padding: 1rem 1.5rem;
            border-bottom: 2px solid #E8F6F9;
        }
        .content-card-title {
            font-size: 1rem;
            font-weight: 700;
            color: #2C5F7F;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .goal-card-dash {
            background: white;
            border: 2px solid #E8F6F9;
            border-radius: 1.25rem;
            padding: 1.5rem;
            transition: all 0.3s;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
            cursor: pointer;
            height: 100%;
            position: relative;
            overflow: hidden;
        }
        .goal-card-dash::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            border-radius: 1.25rem 0 0 1.25rem;
            transition: width 0.2s;
        }
        .goal-card-dash.active::before { background: linear-gradient(180deg, var(--pastel-green), #C8F2E3); }
        .goal-card-dash.completed::before { background: linear-gradient(180deg, var(--pastel-blue), #B8E6F0); }
        .goal-card-dash.paused::before { background: linear-gradient(180deg, var(--pastel-orange), #FFE5CC); }
        .goal-card-dash.failed::before { background: linear-gradient(180deg, #FFB3D9, #FFD1DC); }
        .goal-card-dash.draft::before { background: linear-gradient(180deg, #e2e8f0, #cbd5e1); }
        .goal-card-dash:hover {
            transform: translateY(-6px);
            border-color: var(--pastel-blue);
            box-shadow: 0 12px 32px rgba(168, 216, 234, 0.2);
        }
        .goal-card-dash:hover::before { width: 8px; }
        .goal-icon-dash {
            width: 52px;
            height: 52px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, var(--pastel-green-light), #F0FAF7);
            color: #2D6A5C;
        }
        .goal-title-dash {
            font-size: 1.1rem;
            font-weight: 700;
            color: #2C5F7F;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }
        .goal-desc-dash {
            color: #5A7C8F;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            line-height: 1.5;
        }
        .goal-badges-dash {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        .badge-goal {
            padding: 0.25rem 0.65rem;
            border-radius: 50px;
            font-size: 0.7rem;
            font-weight: 700;
        }
        .badge-goal-active { background: var(--pastel-green-light); color: #2D6A5C; }
        .badge-goal-completed { background: var(--pastel-blue-light); color: #2C5F7F; }
        .badge-goal-paused { background: var(--pastel-orange-light); color: #8B7355; }
        .badge-goal-failed { background: var(--pastel-pink-light); color: #9D5C7E; }
        .badge-goal-draft { background: #f1f5f9; color: #64748b; }
        .progress-wrap-dash {
            margin-bottom: 1rem;
        }
        .progress-label-dash {
            font-size: 0.75rem;
            font-weight: 600;
            color: #5A7C8F;
            margin-bottom: 0.35rem;
        }
        .progress-bar-dash {
            height: 8px;
            background: #E8F6F9;
            border-radius: 999px;
            overflow: hidden;
        }
        .progress-fill-dash {
            height: 100%;
            border-radius: 999px;
            transition: width 0.6s ease;
        }
        .progress-fill-dash.active { background: linear-gradient(90deg, var(--pastel-green), #C8F2E3); }
        .progress-fill-dash.completed { background: linear-gradient(90deg, var(--pastel-blue), #B8E6F0); }
        .meta-dash {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            font-size: 0.8rem;
            color: #5A7C8F;
            margin-bottom: 1rem;
        }
        .meta-dash span { display: inline-flex; align-items: center; gap: 0.35rem; }
        .goal-actions-dash {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
            padding-top: 1rem;
            border-top: 1px solid #E8F6F9;
        }
        .goal-actions-dash .btn-goal-sm {
            padding: 0.4rem 0.9rem;
            border-radius: 0.6rem;
            font-size: 0.8rem;
            font-weight: 600;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            transition: all 0.2s;
        }
        .btn-goal-edit {
            background: var(--pastel-blue-light);
            color: #2C5F7F;
        }
        .btn-goal-edit:hover { background: var(--pastel-blue); color: white; transform: translateY(-1px); }
        .btn-goal-dup {
            background: #f1f5f9;
            color: #475569;
        }
        .btn-goal-dup:hover { background: #e2e8f0; transform: translateY(-1px); }
        .btn-goal-del {
            background: #FFE4E9;
            color: #be123c;
        }
        .btn-goal-del:hover { background: #FFB3D9; color: white; transform: translateY(-1px); }
        .filters-card {
            background: white;
            border: 2px solid #E8F6F9;
            border-radius: 1.25rem;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        }
        .filters-card .form-control, .filters-card .form-select {
            border: 2px solid #E8F6F9;
            border-radius: 0.75rem;
            padding: 0.5rem 1rem;
        }
        .filters-card .form-control:focus, .filters-card .form-select:focus {
            border-color: var(--pastel-blue);
            box-shadow: 0 0 0 3px rgba(168, 216, 234, 0.25);
        }
        .btn-new-goal-dash {
            background: linear-gradient(135deg, var(--pastel-green), #C8F2E3);
            color: #1e5631;
            border: none;
            padding: 0.65rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 14px rgba(181, 234, 215, 0.4);
            transition: all 0.3s;
        }
        .btn-new-goal-dash:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(181, 234, 215, 0.5);
            color: #1e5631;
        }
        .empty-state-goals {
            text-align: center;
            padding: 3rem 2rem;
            background: white;
            border: 2px dashed #E8F6F9;
            border-radius: 1.25rem;
            color: #5A7C8F;
        }
        .empty-state-goals .empty-icon-goals {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--pastel-green-light), #F0FAF7);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            color: var(--pastel-green);
        }
        .pagination-dash {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }
        .pagination-dash a, .pagination-dash span {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 40px;
            height: 40px;
            padding: 0 0.75rem;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            border: 2px solid #E8F6F9;
            background: white;
            color: #2C5F7F;
            transition: all 0.2s;
        }
        .pagination-dash a:hover {
            border-color: var(--pastel-blue);
            background: var(--pastel-blue-light);
        }
        .pagination-dash .current {
            background: linear-gradient(135deg, var(--pastel-green), #C8F2E3);
            border-color: var(--pastel-green);
            color: #1e5631;
        }
        .pagination-dash .disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container position-relative">
            <span class="welcome-badge mb-3">
                <i class="bi bi-bullseye"></i>
                Suivi d'objectifs
            </span>
            <h1 class="display-5 fw-bold text-dark mb-2 mt-3">
                Mes Objectifs
            </h1>
            <p class="text-muted lead mb-0">Gérez vos objectifs et suivez vos progrès au quotidien.</p>
            <div class="mt-3">
                <a href="{{ path('app_goal_new') }}" class="btn-new-goal-dash">
                    <i class="bi bi-plus-circle"></i> Nouvel objectif
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {% set activeCount = pagination|filter(g => g.status == 'active')|length %}
        {% set completedCount = pagination|filter(g => g.status == 'completed')|length %}
        {% set pausedCount = pagination|filter(g => g.status == 'paused')|length %}
        {% set failedCount = pagination|filter(g => g.status == 'failed')|length %}

        {% if pagination|length > 0 %}
        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="stats-card" style="border-color: var(--pastel-green);">
                    <div class="stats-icon" style="background: linear-gradient(135deg, var(--pastel-green), #C8F2E3); color: white;">
                        <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <div class="stats-number">{{ activeCount }}</div>
                    <div class="stats-label">Actifs</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stats-card" style="border-color: var(--pastel-blue);">
                    <div class="stats-icon" style="background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0); color: white;">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="stats-number">{{ completedCount }}</div>
                    <div class="stats-label">Terminés</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stats-card" style="border-color: var(--pastel-orange);">
                    <div class="stats-icon" style="background: linear-gradient(135deg, var(--pastel-orange), #FFE5CC); color: white;">
                        <i class="bi bi-pause-circle-fill"></i>
                    </div>
                    <div class="stats-number">{{ pausedCount }}</div>
                    <div class="stats-label">En pause</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stats-card" style="border-color: var(--pastel-pink);">
                    <div class="stats-icon" style="background: linear-gradient(135deg, var(--pastel-pink), #FFD1DC); color: white;">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                    <div class="stats-number">{{ failedCount }}</div>
                    <div class="stats-label">Échoués</div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Filters -->
        <div class="filters-card">
            <form method="get" action="{{ path('app_goal_index') }}" id="filtersForm" class="row g-3 align-items-end">
                <div class="col-12 col-md-4">
                    <label class="form-label fw-semibold text-secondary small">Recherche</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-secondary"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ searchQuery }}">
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label fw-semibold text-secondary small">Statut</label>
                    <select name="status" class="form-select">
                        <option value="all" {{ currentStatus == 'all' ? 'selected' : '' }}>Tous</option>
                        <option value="draft" {{ currentStatus == 'draft' ? 'selected' : '' }}>Brouillon</option>
                        <option value="active" {{ currentStatus == 'active' ? 'selected' : '' }}>Actif</option>
                        <option value="paused" {{ currentStatus == 'paused' ? 'selected' : '' }}>En pause</option>
                        <option value="completed" {{ currentStatus == 'completed' ? 'selected' : '' }}>Terminé</option>
                        <option value="failed" {{ currentStatus == 'failed' ? 'selected' : '' }}>Échoué</option>
                        <option value="archived" {{ currentStatus == 'archived' ? 'selected' : '' }}>Archivé</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label fw-semibold text-secondary small">Trier</label>
                    <select name="sort" class="form-select" id="sortSelect">
                        <option value="createdAt" data-order="DESC" {{ currentSort == 'createdAt' and currentOrder == 'DESC' ? 'selected' : '' }}>Plus récent</option>
                        <option value="createdAt" data-order="ASC" {{ currentSort == 'createdAt' and currentOrder == 'ASC' ? 'selected' : '' }}>Plus ancien</option>
                        <option value="deadline" data-order="ASC" {{ currentSort == 'deadline' and currentOrder == 'ASC' ? 'selected' : '' }}>Deadline</option>
                        <option value="title" data-order="ASC" {{ currentSort == 'title' and currentOrder == 'ASC' ? 'selected' : '' }}>Titre A-Z</option>
                    </select>
                </div>
                <input type="hidden" name="order" id="orderInput" value="{{ currentOrder }}">
                <div class="col-12 col-md-2">
                    <button type="submit" class="btn w-100" style="background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0); color: #2C5F7F; font-weight: 600;">
                        <i class="bi bi-funnel"></i> Appliquer
                    </button>
                </div>
            </form>
        </div>
        <script>
            document.getElementById('sortSelect')?.addEventListener('change', function() {
                var opt = this.options[this.selectedIndex];
                document.getElementById('orderInput').value = opt.getAttribute('data-order') || 'DESC';
            });
        </script>

        <!-- Goals grid -->
        {% if pagination|length > 0 %}
        <div class="row g-4" id="goalsContainer">
            {% for goal in pagination %}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="goal-card-dash {{ goal.status }}"
                     onclick="window.location.href='{{ path('app_goal_show', {id: goal.id}) }}'">
                    <div class="goal-icon-dash">
                        <i class="bi bi-bullseye"></i>
                    </div>
                    <h3 class="goal-title-dash">{{ goal.title }}</h3>
                    {% if goal.description %}
                    <p class="goal-desc-dash">{{ goal.description|slice(0, 80) }}{% if goal.description|length > 80 %}…{% endif %}</p>
                    {% endif %}
                    <div class="goal-badges-dash">
                        <span class="badge-goal badge-goal-{{ goal.status }}">{{ goal.status|upper }}</span>
                        {% if goal.priority %}
                        <span class="badge-goal" style="background: var(--pastel-purple-light); color: #6D28D9;">{{ goal.priority }}</span>
                        {% endif %}
                    </div>
                    <div class="progress-wrap-dash">
                        <div class="progress-label-dash">Progression {{ goal.progressPercentage }}%</div>
                        <div class="progress-bar-dash">
                            <div class="progress-fill-dash {{ goal.status }}" style="width: {{ goal.progressPercentage }}%;"></div>
                        </div>
                    </div>
                    <div class="meta-dash">
                        <span><i class="bi bi-calendar-event"></i> {{ goal.startDate|date('d/m/Y') }}</span>
                        {% if goal.deadline %}
                        <span><i class="bi bi-flag"></i> {{ goal.deadline|date('d/m/Y') }}</span>
                        {% endif %}
                        <span><i class="bi bi-list-ul"></i> {{ goal.routines|length }} routine(s)</span>
                    </div>
                    <div class="goal-actions-dash">
                        <button type="button" class="btn-goal-sm btn-goal-edit" onclick="event.stopPropagation(); window.location.href='{{ path('app_goal_edit', {id: goal.id}) }}'">
                            <i class="bi bi-pencil"></i> Modifier
                        </button>
                        <button type="button" class="btn-goal-sm btn-goal-dup" onclick="event.stopPropagation(); duplicateGoal({{ goal.id }}, '{{ goal.title|e('js') }}', '{{ csrf_token('duplicate' ~ goal.id) }}')">
                            <i class="bi bi-files"></i> Dupliquer
                        </button>
                        <button type="button" class="btn-goal-sm btn-goal-del" onclick="event.stopPropagation(); deleteGoal({{ goal.id }}, '{{ goal.title|e('js') }}', '{{ csrf_token('delete' ~ goal.id) }}')">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if pagination.pageCount > 1 %}
        <div class="pagination-dash">
            {% if pagination.currentPageNumber > 1 %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: pagination.currentPageNumber - 1})) }}">
                <i class="bi bi-chevron-left"></i> Préc.
            </a>
            {% else %}
            <span class="disabled"><i class="bi bi-chevron-left"></i> Préc.</span>
            {% endif %}
            {% for page in 1..pagination.pageCount %}
                {% if page == pagination.currentPageNumber %}
                <span class="current">{{ page }}</span>
                {% elseif page == 1 or page == pagination.pageCount or (page >= pagination.currentPageNumber - 2 and page <= pagination.currentPageNumber + 2) %}
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: page})) }}">{{ page }}</a>
                {% elseif page == pagination.currentPageNumber - 3 or page == pagination.currentPageNumber + 3 %}
                <span class="text-muted">…</span>
                {% endif %}
            {% endfor %}
            {% if pagination.currentPageNumber < pagination.pageCount %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({page: pagination.currentPageNumber + 1})) }}">
                Suiv. <i class="bi bi-chevron-right"></i>
            </a>
            {% else %}
            <span class="disabled">Suiv. <i class="bi bi-chevron-right"></i></span>
            {% endif %}
            <span class="ms-3 small text-secondary">Page {{ pagination.currentPageNumber }}/{{ pagination.pageCount }} ({{ pagination.totalItemCount }} objectif{{ pagination.totalItemCount > 1 ? 's' : '' }})</span>
        </div>
        {% endif %}

        {% else %}
        <div class="empty-state-goals">
            <div class="empty-icon-goals">
                <i class="bi bi-bullseye"></i>
            </div>
            <h2 class="h4 fw-bold text-dark mb-2">Commencez votre parcours</h2>
            <p class="mb-4">Créez votre premier objectif pour suivre vos progrès.</p>
            <a href="{{ path('app_goal_new') }}" class="btn-new-goal-dash">
                <i class="bi bi-plus-circle"></i> Créer mon premier objectif
            </a>
        </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function duplicateGoal(goalId, title, csrfToken) {
            if (!confirm('Dupliquer l\'objectif "' + title + '" ?')) return;
            fetch('/goals/' + goalId + '/duplicate', {
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest', 'Content-Type': 'application/x-www-form-urlencoded' },
                body: '_token=' + encodeURIComponent(csrfToken)
            }).then(function(r) { return r.json(); }).then(function(data) {
                if (data.success) { alert(data.message); location.reload(); }
                else { alert(data.message || 'Erreur'); }
            }).catch(function() { alert('Erreur réseau'); });
        }
        function deleteGoal(goalId, title, csrfToken) {
            if (!confirm('Supprimer définitivement "' + title + '" ?\n\nLes routines et activités liées seront aussi supprimées.')) return;
            fetch('/goals/' + goalId, {
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest', 'Content-Type': 'application/x-www-form-urlencoded' },
                body: '_token=' + encodeURIComponent(csrfToken)
            }).then(function(r) { return r.json(); }).then(function(data) {
                if (data.success) { alert(data.message); location.reload(); }
                else { alert(data.message || 'Erreur'); }
            }).catch(function() { alert('Erreur réseau'); });
        }
