{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; }
        .card-dash { border-radius: 1rem; border: 1px solid #e9ecef; transition: box-shadow 0.2s; }
        .card-dash:hover { box-shadow: 0 4px 16px rgba(0,0,0,0.08); }
        .btn-dash { border-radius: 0.5rem; font-weight: 600; padding: 0.75rem 1.5rem; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="h2 fw-bold mb-1">Tableau de bord</h1>
        <p class="text-muted mb-4">Bienvenue, {{ app.user.firstName }}.</p>

        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_coach_index') }}" class="text-decoration-none">
                    <div class="card card-dash h-100 border-0 shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <div class="rounded-circle bg-light p-3 me-3" style="color: var(--orange-primary);">
                                <i class="bi bi-person-plus-fill fs-4"></i>
                            </div>
                            <div>
                                <h2 class="h5 fw-bold mb-1 text-dark">Demander coaching</h2>
                                <p class="text-muted small mb-0">Trouvez un coach et envoyez une demande</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted ms-auto"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_session_index') }}" class="text-decoration-none">
                    <div class="card card-dash h-100 border-0 shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <div class="rounded-circle bg-light p-3 me-3" style="color: var(--orange-primary);">
                                <i class="bi bi-calendar-check-fill fs-4"></i>
                            </div>
                            <div>
                                <h2 class="h5 fw-bold mb-1 text-dark">Mes sessions</h2>
                                <p class="text-muted small mb-0">{{ sessionsCount }} session(s)</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted ms-auto"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        {% if sessions|length > 0 %}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom py-3">
                    <i class="bi bi-calendar-event me-2" style="color: var(--orange-primary);"></i>
                    <strong>Mes prochaines sessions</strong>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {% for s in sessions|slice(0, 5) %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Coach : {{ s.coachingRequest.coach.firstName }} {{ s.coachingRequest.coach.lastName }}</strong>
                                    <span class="badge bg-secondary ms-2">{{ s.status }}</span>
                                    {% if s.duration %}<span class="text-muted ms-2">{{ s.duration }} min</span>{% endif %}
                                </div>
                                <a href="{{ path('app_session_show', { id: s.id }) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="card-footer bg-white border-top py-2">
                    <a href="{{ path('app_session_index') }}" class="btn btn-sm btn-link text-decoration-none">Voir toutes les sessions</a>
                </div>
            </div>
        {% endif %}

        <div class="row g-4">
            <div class="col-12 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <i class="bi bi-bullseye me-2" style="color: var(--orange-primary);"></i>
                        <strong>Objectifs</strong>
                        <span class="badge bg-primary ms-2">{{ goalsCount }}</span>
                    </div>
                    <div class="card-body">
                        {% if recentGoals is empty %}
                            <p class="text-muted mb-0">Aucun objectif pour le moment.</p>
                            <a href="{{ path('app_goal_index') }}" class="btn btn-sm btn-outline-primary mt-2">Voir les objectifs</a>
                        {% else %}
                            <ul class="list-group list-group-flush">
                                {% for goal in recentGoals %}
                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                        {{ goal.title }}
                                        {% if goal.status is defined and goal.status == 'completed' %}
                                            <span class="badge bg-success">Terminé</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">En cours</span>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                            <a href="{{ path('app_goal_index') }}" class="btn btn-sm btn-outline-primary mt-2">Voir tous les objectifs</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <i class="bi bi-list-check me-2" style="color: var(--orange-primary);"></i>
                        <strong>Routines</strong>
                        <span class="badge bg-success ms-2">{{ routinesCount }}</span>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-0">{{ routinesCount }} routine(s) associée(s) à vos objectifs.</p>
                        <a href="{{ path('app_goal_index') }}" class="btn btn-sm btn-outline-primary mt-2">Voir mes objectifs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
