<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="{{ asset('dashbord_user/dashbord_user.css') }}" rel="stylesheet">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">

<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand ps-3" href="#">My Wellness App</a>

    <ul class="navbar-nav ms-auto me-3">
        <li class="nav-item">
            <span class="nav-link text-white">
                Welcome {{ app.user.firstName }} ðŸ‘‹
            </span>
        </li>
    </ul>
</nav>

<div id="layoutSidenav">

    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark">
            <div class="sb-sidenav-menu">
                <div class="nav">

                    <div class="sb-sidenav-menu-heading">Core</div>

                    <a class="nav-link" href="{{ path('user_dashboard') }}">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        Dashboard
                    </a>

                    <a class="nav-link" href="{{ path('goals_index') }}">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-bullseye"></i>
                        </div>
                        My Goals
                    </a>

                </div>
            </div>

            <div class="sb-sidenav-footer">
                <div class="small">Logged in as:</div>
                {{ app.user.email }}
            </div>
        </nav>
    </div>

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">

                <h1 class="mt-4">Dashboard</h1>

                <!-- STATISTICS CARDS -->
                <div class="row">

                    <div class="col-xl-4 col-md-6">
                        <div class="card bg-primary text-white mb-4">
                            <div class="card-body">
                                <h4>{{ goalsCount }}</h4>
                                Total Goals
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-4 col-md-6">
                        <div class="card bg-success text-white mb-4">
                            <div class="card-body">
                                <h4>{{ routinesCount }}</h4>
                                Total Routines
                            </div>
                        </div>
                    </div>

                </div>

                <!-- RECENT GOALS -->
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-list me-1"></i>
                        Recent Goals
                    </div>

                    <div class="card-body">

                        {% if recentGoals is empty %}
                            <p>No goals yet. Start by creating one! ðŸš€</p>
                        {% else %}
                            <ul class="list-group">
                                {% for goal in recentGoals %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{ goal.title }}
                                        {% if goal.status is defined and goal.status == 'completed' %}
                                            <span class="badge bg-success">Completed</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">In Progress</span>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}

                        <div class="mt-3">
                            <a href="{{ path('goals_index') }}" class="btn btn-primary">
                                View All Goals
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </main>

        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="text-muted small">
                    Copyright &copy; {{ "now"|date("Y") }}
                </div>
            </div>
        </footer>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
