{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe - DayFlow{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">üîê Changer mon mot de passe</h1>
            <p class="text-gray-600">Choisissez un mot de passe fort et unique</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-4 rounded-lg bg-green-100 p-4 text-sm text-green-800">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 rounded-lg bg-red-100 p-4 text-sm text-red-800">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(changePasswordForm) }}

        <div class="space-y-4">
            <div>
                {{ form_label(changePasswordForm.plainPassword.first, 'Nouveau mot de passe', {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                }) }}
                {{ form_widget(changePasswordForm.plainPassword.first, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}
                }) }}
                {{ form_errors(changePasswordForm.plainPassword.first) }}
            </div>

            <div>
                {{ form_label(changePasswordForm.plainPassword.second, 'Confirmer le mot de passe', {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                }) }}
                {{ form_widget(changePasswordForm.plainPassword.second, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}
                }) }}
                {{ form_errors(changePasswordForm.plainPassword.second) }}
            </div>
        </div>

        <div class="mt-6 bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
            <h3 class="text-sm font-medium text-blue-800 mb-2">Conseils pour un mot de passe s√©curis√© :</h3>
            <ul class="text-sm text-blue-700 space-y-1 list-disc list-inside">
                <li>Au moins 8 caract√®res</li>
                <li>M√©lange de majuscules et minuscules</li>
                <li>Inclure des chiffres et des caract√®res sp√©ciaux</li>
                <li>√âviter les informations personnelles</li>
            </ul>
        </div>

        <div class="mt-6 flex gap-3">
            <button type="submit" class="flex-1 bg-purple-600 text-white py-2.5 px-4 rounded-lg hover:bg-purple-700 transition font-medium">
                Changer le mot de passe
            </button>
            <a href="{{ path('user_dashboard') }}" class="flex-1 bg-gray-200 text-gray-700 py-2.5 px-4 rounded-lg hover:bg-gray-300 transition font-medium text-center">
                Annuler
            </a>
        </div>

        {{ form_end(changePasswordForm) }}
    </div>
</div>
{% endblock %}
