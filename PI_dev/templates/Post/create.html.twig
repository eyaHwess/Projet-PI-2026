{% extends 'base.html.twig' %}

{% block body %}
<h2>Create Post</h2>

<form action="{{ path('post_create') }}" method="post">
    <div>
        <label>Title</label>
        <input type="text" name="title" required>
    </div>

    <div>
        <label>Content</label>
        <textarea name="content" required></textarea>
    </div>

    <button type="submit">Create</button>
</form>
{% endblock %}
