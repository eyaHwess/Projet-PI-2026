{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root {
            --pastel-green: #B5EAD7;
            --pastel-green-light: #E8F8F3;
            --pastel-blue: #A8D8EA;
        }
        .success-card {
            max-width: 500px;
            margin: 4rem auto;
            padding: 3rem;
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 8px 28px rgba(0, 0, 0, 0.08);
            text-align: center;
            border: 2px solid var(--pastel-green-light);
        }
        .success-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--pastel-green), #C8F2E3);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            color: white;
        }
        .btn-back-session {
            background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0);
            border: none;
            color: #2C5F7F;
            padding: 0.75rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s;
        }
        .btn-back-session:hover {
            transform: translateY(-2px);
            color: #2C5F7F;
            box-shadow: 0 6px 20px rgba(168, 216, 234, 0.4);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="success-card">
            <div class="success-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h1 class="h3 fw-bold text-success mb-2">Paiement réussi !</h1>
            <p class="text-muted mb-4">
                Votre session de coaching #{{ session.id }} a été payée.
            </p>
            <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn-back-session">
                <i class="bi bi-arrow-left"></i>
                Retour à la session
            </a>
        </div>
    </div>
{% endblock %}
