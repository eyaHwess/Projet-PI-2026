{% extends 'base.html.twig' %}

{% block title %}Planifier la session{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root {
            --pastel-blue: #A8D8EA;
            --pastel-blue-light: #E8F6F9;
            --pastel-pink: #FFE4E9;
            --pastel-pink-dark: #FFB3C1;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #F8FCFE 0%, #F0F8FF 100%);
            min-height: 100vh;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
        }
        
        /* Header */
        .page-header {
            background: linear-gradient(135deg, var(--pastel-blue-light) 0%, #F0F8FF 50%, var(--pastel-pink) 100%);
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 2rem 2rem;
            box-shadow: 0 4px 20px rgba(168, 216, 234, 0.15);
            position: relative;
            overflow: hidden;
        }
        
        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 179, 193, 0.2) 0%, transparent 70%);
            border-radius: 50%;
        }
        
        .btn-back {
            background: white;
            border: 2px solid var(--pastel-blue-light);
            color: #5A7C8F;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-back:hover {
            border-color: var(--pastel-blue);
            color: #2C5F7F;
            background: var(--pastel-blue-light);
            transform: translateX(-5px);
        }
        
        /* Hero Card */
        .hero-card {
            background: white;
            border: 3px solid var(--pastel-blue-light);
            border-radius: 1.75rem;
            padding: 2.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(168, 216, 234, 0.2);
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.6s ease-out;
        }
        
        .hero-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, var(--pastel-blue), var(--pastel-pink-dark));
        }
        
        .hero-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            box-shadow: 0 6px 20px rgba(168, 216, 234, 0.3);
            animation: pulse 3s infinite;
        }
        
        .hero-title {
            font-size: 2rem;
            font-weight: 800;
            color: #2C5F7F;
            margin-bottom: 0.5rem;
        }
        
        .hero-subtitle {
            color: #5A7C8F;
            font-size: 1.05rem;
            line-height: 1.6;
        }
        
        .user-badge {
            background: linear-gradient(135deg, var(--pastel-pink), #FFF0F3);
            color: #8B5F7A;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 12px rgba(255, 179, 193, 0.2);
        }
        
        /* Form Card */
        .form-card {
            background: white;
            border: 3px solid var(--pastel-blue-light);
            border-radius: 1.75rem;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(168, 216, 234, 0.2);
            animation: slideIn 0.7s ease-out;
        }
        
        .form-card-header {
            background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0);
            color: white;
            padding: 1.75rem 2rem;
            border: none;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .form-card-header i {
            font-size: 1.5rem;
        }
        
        .form-card-header h3 {
            margin: 0;
            font-size: 1.35rem;
            font-weight: 800;
        }
        
        .form-card-body {
            padding: 2.5rem;
        }
        
        /* Form Elements */
        .form-group {
            margin-bottom: 2rem;
            animation: fadeInUp 0.5s ease-out;
        }
        
        .form-label {
            font-weight: 700;
            color: #2C5F7F;
            margin-bottom: 0.75rem;
            font-size: 1.05rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-label i {
            color: var(--pastel-blue);
        }
        
        .form-control, .form-select {
            border: 2px solid var(--pastel-blue-light);
            border-radius: 0.875rem;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s;
            background: #F8FCFE;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--pastel-blue);
            box-shadow: 0 0 0 4px rgba(168, 216, 234, 0.2);
            background: white;
            outline: none;
        }
        
        .form-control:hover, .form-select:hover {
            border-color: var(--pastel-blue);
        }
        
        .form-text {
            color: #8B9DAF;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }
        
        .form-text i {
            color: var(--pastel-blue);
        }
        
        /* Input Icons */
        .input-group-icon {
            position: relative;
        }
        
        .input-group-icon .form-control {
            padding-left: 3.5rem;
        }
        
        .input-icon {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--pastel-blue);
            font-size: 1.25rem;
            pointer-events: none;
        }
        
        /* Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            padding-top: 2rem;
            border-top: 2px solid var(--pastel-blue-light);
        }
        
        .btn-submit {
            background: linear-gradient(135deg, var(--pastel-blue), #B8E6F0);
            border: none;
            color: white;
            padding: 1rem 2.5rem;
            border-radius: 0.875rem;
            font-weight: 700;
            font-size: 1.05rem;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 6px 20px rgba(168, 216, 234, 0.3);
        }
        
        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 32px rgba(168, 216, 234, 0.5);
            color: white;
        }
        
        .btn-submit i {
            font-size: 1.25rem;
        }
        
        .btn-cancel {
            background: white;
            border: 2px solid var(--pastel-blue-light);
            color: #5A7C8F;
            padding: 1rem 2rem;
            border-radius: 0.875rem;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-cancel:hover {
            border-color: var(--pastel-blue);
            color: #2C5F7F;
            background: var(--pastel-blue-light);
        }
        
        .btn-delete {
            background: white;
            border: 2px solid var(--pastel-pink-dark);
            color: #8B5F7A;
            padding: 1rem 2rem;
            border-radius: 0.875rem;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-delete:hover {
            background: linear-gradient(135deg, var(--pastel-pink), #FFF0F3);
            border-color: var(--pastel-pink-dark);
            color: #8B5F7A;
            transform: translateY(-2px);
        }
        
        /* Info Box */
        .info-box {
            background: linear-gradient(135deg, var(--pastel-pink), #FFF5F7);
            border: 2px solid var(--pastel-pink-dark);
            border-radius: 1rem;
            padding: 1.25rem 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: start;
            gap: 1rem;
        }
        
        .info-box-icon {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--pastel-pink-dark);
            font-size: 1.25rem;
            flex-shrink: 0;
        }
        
        .info-box-content {
            flex: 1;
        }
        
        .info-box-title {
            font-weight: 700;
            color: #8B5F7A;
            margin-bottom: 0.25rem;
        }
        
        .info-box-text {
            color: #A67C8F;
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .hero-card {
                padding: 1.75rem;
            }
            
            .form-card-body {
                padding: 1.75rem;
            }
            
            .hero-title {
                font-size: 1.5rem;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-submit, .btn-cancel, .btn-delete {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Header -->
    <div class="page-header">
        <div class="container position-relative">
            <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                Retour à la session
            </a>
        </div>
    </div>

    <section class="pb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9 col-xl-8">
                    <!-- Hero Card -->
                    <div class="hero-card">
                        <div class="d-flex align-items-center gap-4 mb-3">
                            <div class="hero-icon">
                                <i class="bi bi-calendar-event-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h1 class="hero-title">Proposer un créneau</h1>
                                <p class="hero-subtitle mb-0">
                                    Session avec 
                                    <span class="user-badge">
                                        <i class="bi bi-person-fill"></i>
                                        {{ session.coachingRequest.user.firstName }} {{ session.coachingRequest.user.lastName }}
                                    </span>
                                </p>
                            </div>
                        </div>
                        
                        <div class="info-box">
                            <div class="info-box-icon">
                                <i class="bi bi-info-circle-fill"></i>
                            </div>
                            <div class="info-box-content">
                                <div class="info-box-title">Comment ça marche ?</div>
                                <div class="info-box-text">
                                    Choisissez une date, une heure et une durée pour votre session. L'autre partie pourra confirmer ou proposer un autre horaire.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Card -->
                    <div class="form-card">
                        <div class="form-card-header">
                            <i class="bi bi-clock-history"></i>
                            <h3>Date, heure et durée</h3>
                        </div>
                        <div class="form-card-body">
                            {{ form_start(form, { attr: { class: 'schedule-form' } }) }}
                                {% if form.proposedTimeByCoach is defined %}
                                    <div class="form-group">
                                        {{ form_label(form.proposedTimeByCoach, 'Date et heure proposée', { 
                                            label_attr: { class: 'form-label' },
                                            label_html: true
                                        }) }}
                                        <div class="input-group-icon">
                                            <i class="input-icon bi bi-calendar3"></i>
                                            {{ form_widget(form.proposedTimeByCoach, { attr: { class: 'form-control' } }) }}
                                        </div>
                                        <div class="form-text">
                                            <i class="bi bi-info-circle"></i>
                                            Sélectionnez la date et l'heure de début de la session
                                        </div>
                                        {{ form_errors(form.proposedTimeByCoach) }}
                                    </div>
                                {% else %}
                                    <div class="form-group">
                                        {{ form_label(form.proposedTimeByUser, 'Date et heure proposée', { 
                                            label_attr: { class: 'form-label' }
                                        }) }}
                                        <div class="input-group-icon">
                                            <i class="input-icon bi bi-calendar3"></i>
                                            {{ form_widget(form.proposedTimeByUser, { attr: { class: 'form-control' } }) }}
                                        </div>
                                        <div class="form-text">
                                            <i class="bi bi-info-circle"></i>
                                            Sélectionnez la date et l'heure de début de la session
                                        </div>
                                        {{ form_errors(form.proposedTimeByUser) }}
                                    </div>
                                {% endif %}
                                
                                {% if form.duration is defined %}
                                    <div class="form-group">
                                        {{ form_label(form.duration, 'Durée de la session (minutes)', { 
                                            label_attr: { class: 'form-label' }
                                        }) }}
                                        <div class="input-group-icon">
                                            <i class="input-icon bi bi-hourglass-split"></i>
                                            {{ form_widget(form.duration, { attr: { class: 'form-control', placeholder: 'Ex: 60 pour 1 heure' } }) }}
                                        </div>
                                        <div class="form-text">
                                            <i class="bi bi-info-circle"></i>
                                            Entre 15 et 240 minutes (ex: 60 pour 1 heure, 90 pour 1h30)
                                        </div>
                                        {{ form_errors(form.duration) }}
                                    </div>
                                {% endif %}
                                
                                <div class="action-buttons">
                                    <button type="submit" class="btn-submit">
                                        <i class="bi bi-check-circle-fill"></i>
                                        Proposer le créneau
                                    </button>
                                    <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn-cancel">
                                        <i class="bi bi-x-circle"></i>
                                        Annuler
                                    </a>
                                    {% if (session.status == 'proposed_by_coach' and isCoach and session.proposedTimeByCoach) or (session.status == 'proposed_by_user' and not isCoach and session.proposedTimeByUser) %}
                                        <form method="post" action="{{ path('app_session_clear_slot', { id: session.id }) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce créneau proposé ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('clear-slot' ~ session.id) }}">
                                            <button type="submit" class="btn-delete">
                                                <i class="bi bi-trash"></i>
                                                Supprimer le créneau
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
