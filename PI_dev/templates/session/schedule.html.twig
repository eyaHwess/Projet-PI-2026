{% extends 'base.html.twig' %}

{% block title %}Planifier la session{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; --orange-light: #fff7ed; }
        .schedule-hero { background: linear-gradient(135deg, var(--orange-light) 0%, #fff 50%); border-radius: 1rem; }
        .form-card-schedule { border: none; border-radius: 1.25rem; box-shadow: 0 4px 24px rgba(0,0,0,0.06); overflow: hidden; }
        .form-card-schedule .card-header { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); color: #fff; border: none; padding: 1.25rem 1.5rem; font-weight: 600; }
        .btn-schedule { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: #fff; font-weight: 600; padding: 0.625rem 1.5rem; border-radius: 0.5rem; transition: transform 0.2s, box-shadow 0.2s; }
        .btn-schedule:hover { color: #fff; transform: translateY(-1px); box-shadow: 0 4px 12px rgba(249, 115, 22, 0.4); }
        .schedule-form .form-control, .schedule-form .form-select { border-radius: 0.5rem; padding: 0.625rem 1rem; }
        .schedule-form .form-label { font-weight: 600; color: #374151; }
        .schedule-avatar { width: 48px; height: 48px; background: linear-gradient(135deg, #fff5f0, #ffe4d6); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--orange-primary); font-size: 1.25rem; }
    </style>
{% endblock %}

{% block body %}
    <section class="pt-4 pb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 col-xl-7">
                    <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn btn-link text-decoration-none text-muted mb-3 ps-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la session
                    </a>

                    <div class="schedule-hero p-4 p-md-5 mb-4">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="schedule-avatar">
                                <i class="bi bi-calendar-event-fill"></i>
                            </div>
                            <div>
                                <h1 class="h4 fw-bold mb-1 text-dark">Proposer un créneau</h1>
                                <p class="text-muted small mb-0">
                                    Session avec <strong>{{ session.coachingRequest.user.firstName }} {{ session.coachingRequest.user.lastName }}</strong>
                                    {% if isCoach %}<span class="badge bg-white text-primary ms-1">Coach</span>{% endif %}
                                </p>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">Choisissez une date, une heure et une durée. L'autre partie pourra confirmer ou proposer un autre horaire.</p>
                    </div>

                    <div class="card form-card-schedule">
                        <div class="card-header">
                            <i class="bi bi-clock-history me-2"></i>Date, heure et durée
                        </div>
                        <div class="card-body p-4 p-md-5">
                            {{ form_start(form, { attr: { class: 'schedule-form' } }) }}
                                {% if form.proposedTimeByCoach is defined %}
                                    <div class="mb-4">
                                        {{ form_label(form.proposedTimeByCoach, null, { label_attr: { class: 'form-label' } }) }}
                                        {{ form_widget(form.proposedTimeByCoach, { attr: { class: 'form-control form-control-lg' } }) }}
                                        {{ form_errors(form.proposedTimeByCoach) }}
                                    </div>
                                {% else %}
                                    <div class="mb-4">
                                        {{ form_label(form.proposedTimeByUser, null, { label_attr: { class: 'form-label' } }) }}
                                        {{ form_widget(form.proposedTimeByUser, { attr: { class: 'form-control form-control-lg' } }) }}
                                        {{ form_errors(form.proposedTimeByUser) }}
                                    </div>
                                {% endif %}
                                {% if form.duration is defined %}
                                    <div class="mb-4">
                                        {{ form_label(form.duration, null, { label_attr: { class: 'form-label' } }) }}
                                        {{ form_widget(form.duration, { attr: { class: 'form-control form-control-lg' } }) }}
                                        <div class="form-text">Entre 15 et 240 minutes (ex. 60 pour 1h)</div>
                                        {{ form_errors(form.duration) }}
                                    </div>
                                {% endif %}
                                <hr class="my-4">
                                <div class="d-flex flex-wrap gap-2 align-items-center">
                                    <button type="submit" class="btn btn-schedule">
                                        <i class="bi bi-check-lg me-2"></i>Proposer le créneau
                                    </button>
                                    <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn btn-outline-secondary">Annuler</a>
                                    {% if (session.status == 'proposed_by_coach' and isCoach and session.proposedTimeByCoach) or (session.status == 'proposed_by_user' and not isCoach and session.proposedTimeByUser) %}
                                        <form method="post" action="{{ path('app_session_clear_slot', { id: session.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer le créneau proposé ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('clear-slot' ~ session.id) }}">
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash me-2"></i>Supprimer le créneau
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
