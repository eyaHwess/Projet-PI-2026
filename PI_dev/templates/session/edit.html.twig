{% extends 'base.html.twig' %}

{% block title %}Modifier la session{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; }
        .btn-orange { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white; border-radius: 50px; font-weight: 600; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <a href="{{ path('app_session_show', { id: session.id }) }}" class="btn btn-outline-secondary mb-4"><i class="bi bi-arrow-left me-2"></i>Retour</a>
        <h2 class="mb-4">Modifier la session #{{ session.id }}</h2>
        {{ form_start(form) }}
            {{ form_row(form.scheduledAt) }}
            {{ form_row(form.duration) }}
            {{ form_row(form.status) }}
            <button type="submit" class="btn btn-orange">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
