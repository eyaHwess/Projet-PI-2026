{% extends 'base.html.twig' %}

{% block title %}Mes sessions{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; }
        .btn-orange { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white; border-radius: 50px; font-weight: 600; }
        .session-card { border-radius: 16px; border: 2px solid #e9ecef; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4"><i class="bi bi-calendar-event me-2" style="color: var(--orange-primary);"></i>Mes sessions</h1>
        {% if sessions|length > 0 %}
            <div class="row g-3">
                {% for s in sessions %}
                    <div class="col-12">
                        <div class="card session-card">
                            <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <div>
                                    <strong>
                                        {% if s.coachingRequest.coach.id == currentUser.id %}
                                            Client : {{ s.coachingRequest.user.firstName }} {{ s.coachingRequest.user.lastName }}
                                        {% else %}
                                            Coach : {{ s.coachingRequest.coach.firstName }} {{ s.coachingRequest.coach.lastName }}
                                        {% endif %}
                                    </strong>
                                    <span class="badge bg-secondary ms-2">{{ s.status }}</span>
                                    {% if s.duration %}<span class="text-muted ms-2">{{ s.duration }} min</span>{% endif %}
                                </div>
                                <a href="{{ path('app_session_show', { id: s.id }) }}" class="btn btn-orange btn-sm">Voir</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Aucune session.</p>
        {% endif %}
    </div>
{% endblock %}
