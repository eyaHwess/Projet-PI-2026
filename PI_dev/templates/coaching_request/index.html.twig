{% extends 'base.html.twig' %}

{% block title %}Demandes de coaching{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; --orange-hover: #ea580c; }
        .navbar-custom { background-color: #fff !important; box-shadow: 0 2px 8px rgba(0,0,0,0.08); }
        .navbar-custom .nav-link { color: #212529 !important; font-weight: 500; }
        .navbar-custom .nav-link:hover { color: var(--orange-primary) !important; }
        .navbar-custom .nav-link.active { color: var(--orange-primary) !important; font-weight: 600; }
        .navbar-custom .navbar-brand { color: #212529 !important; }
        .btn-orange { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white; border-radius: 0.5rem; font-weight: 600; transition: transform 0.2s, box-shadow 0.2s; }
        .btn-orange:hover { color: #fff; transform: translateY(-1px); box-shadow: 0 4px 12px rgba(249, 115, 22, 0.4); }
        .request-card { border: 1px solid #e9ecef; border-radius: 1rem; padding: 1.5rem; margin-bottom: 1rem; background: #fff; transition: box-shadow 0.2s; }
        .request-card:hover { box-shadow: 0 4px 16px rgba(0,0,0,0.06); }
        .request-card.pending { border-left: 4px solid #f59e0b; background: linear-gradient(90deg, #fffbeb 0%, #fff 12%); }
        .empty-state-icon { width: 5rem; height: 5rem; background: linear-gradient(135deg, #fff5f0, #ffe4d6); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; color: var(--orange-primary); margin: 0 auto 1rem; }
    </style>
{% endblock %}

{% block body %}
    <section class="pt-4 pb-4" style="background: linear-gradient(180deg, #fff 0%, #f8f9fa 100%);">
        <div class="container container-lg">
            <a href="{{ path('user_dashboard') }}" class="btn btn-outline-secondary btn-sm mb-3">
                <i class="bi bi-arrow-left me-1"></i>Retour au tableau de bord
            </a>
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
                <div>
                    <h1 class="h2 fw-bold text-dark mb-1">
                        <i class="bi bi-inbox-fill me-2" style="color: var(--orange-primary);"></i>Demandes de coaching
                    </h1>
                    <p class="text-muted mb-0">Gérez les demandes reçues et planifiez vos sessions.</p>
                </div>
                {% if isDemoSwitch %}
                    <a href="{{ path('app_demo_reset') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Revenir à mon compte
                    </a>
                {% endif %}
            </div>
        </div>
    </section>

    <section class="py-5 bg-white">
        <div class="container container-lg">
            {% if pendingRequests|length > 0 %}
                <h2 class="h5 fw-bold text-dark mb-3">
                    <span class="badge bg-warning text-dark me-2">{{ pendingRequests|length }}</span>En attente
                </h2>
                <div class="row g-3 mb-5">
                    {% for req in pendingRequests %}
                        <div class="col-12">
                            <div class="request-card pending card border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-start g-3">
                                        <div class="col-12 col-md-8">
                                            <div class="d-flex align-items-center flex-wrap gap-2 mb-2">
                                                <strong class="text-dark">{{ req.user.firstName }} {{ req.user.lastName }}</strong>
                                                <span class="badge bg-warning text-dark">En attente</span>
                                                <small class="text-muted">{{ req.createdAt|date('d/m/Y à H:i') }}</small>
                                            </div>
                                            <p class="mb-2 text-muted small">
                                                <i class="bi bi-envelope me-1"></i>{{ req.user.email }}
                                            </p>
                                            <div class="mt-2">
                                                <strong class="text-dark d-block mb-1">Message</strong>
                                                <p class="mb-0">{{ req.message }}</p>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-4 text-md-end">
                                            <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                                                <form action="{{ path('app_coaching_request_accept', {id: req.id}) }}" method="post" class="d-inline accept-form">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('accept-request' ~ req.id) }}">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="bi bi-check-lg me-1"></i>Accepter
                                                    </button>
                                                </form>
                                                <form action="{{ path('app_coaching_request_decline', {id: req.id}) }}" method="post" class="d-inline decline-form">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('decline-request' ~ req.id) }}">
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="bi bi-x-lg me-1"></i>Refuser
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <h2 class="h5 fw-bold text-dark mb-3">Toutes les demandes</h2>
            {% if allRequests|length > 0 %}
                <div class="row g-3">
                    {% for req in allRequests %}
                        <div class="col-12">
                            <div class="request-card card border shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-start g-3">
                                        <div class="col-12 col-md-8">
                                            <div class="d-flex align-items-center flex-wrap gap-2 mb-2">
                                                <strong class="text-dark">{{ req.user.firstName }} {{ req.user.lastName }}</strong>
                                                <span class="badge {% if req.status == 'pending' %}bg-warning text-dark{% elseif req.status == 'accepted' %}bg-success{% elseif req.status == 'declined' %}bg-danger{% else %}bg-secondary{% endif %}">
                                                    {% if req.status == 'pending' %}En attente{% elseif req.status == 'accepted' %}Acceptée{% elseif req.status == 'declined' %}Refusée{% endif %}
                                                </span>
                                                <small class="text-muted">{{ req.createdAt|date('d/m/Y à H:i') }}</small>
                                            </div>
                                            <p class="mb-0">{{ req.message }}</p>
                                        </div>
                                        <div class="col-12 col-md-4 text-md-end">
                                            <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                                                {% if req.status == 'accepted' and req.session %}
                                                    <a href="{{ path('app_session_schedule', {id: req.session.id}) }}" class="btn btn-orange">
                                                        <i class="bi bi-calendar-event me-1"></i>Planifier la session
                                                    </a>
                                                {% endif %}
                                                {% if req.status == 'pending' %}
                                                    <form action="{{ path('app_coaching_request_accept', {id: req.id}) }}" method="post" class="d-inline accept-form">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('accept-request' ~ req.id) }}">
                                                        <button type="submit" class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i></button>
                                                    </form>
                                                    <form action="{{ path('app_coaching_request_decline', {id: req.id}) }}" method="post" class="d-inline decline-form">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('decline-request' ~ req.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bi bi-x-lg"></i></button>
                                                    </form>
                                                {% else %}
                                                    <form action="{{ path('app_coaching_request_pending', {id: req.id}) }}" method="post" class="d-inline pending-form">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('pending-request' ~ req.id) }}">
                                                        <button type="submit" class="btn btn-outline-warning btn-sm">
                                                            <i class="bi bi-clock-history me-1"></i>Remettre en attente
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5 px-3">
                    <div class="empty-state-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h3 class="h5 fw-bold mb-2">Aucune demande pour le moment</h3>
                    <p class="text-muted mb-0">Les demandes de coaching apparaîtront ici lorsque des utilisateurs vous contacteront.</p>
                </div>
            {% endif %}
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.accept-form, .decline-form, .pending-form').forEach(form => {
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                const btn = this.querySelector('button[type="submit"]');
                const initialHtml = btn ? btn.innerHTML : '';
                if (btn) { btn.disabled = true; btn.innerHTML = '<span class="spinner-border spinner-border-sm" aria-hidden="true"></span>'; }
                try {
                    const fd = new FormData(this);
                    const res = await fetch(this.action, { method: 'POST', body: fd, headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                    const data = await res.json();
                    if (data.success && data.redirect) window.location.href = data.redirect;
                    else if (data.success) location.reload();
                } finally {
                    if (btn) { btn.disabled = false; btn.innerHTML = initialHtml; }
                }
            });
        });
    </script>
{% endblock %}
