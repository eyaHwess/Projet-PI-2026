{% extends 'base.html.twig' %}

{% block title %}Gestion des coachs{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; }
        .btn-orange { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white; border-radius: 50px; font-weight: 600; }
        .coach-card { border: 2px solid #e9ecef; border-radius: 16px; padding: 1.5rem; transition: all 0.3s ease; }
        .coach-card:hover { border-color: var(--orange-primary); box-shadow: 0 4px 15px rgba(249, 115, 22, 0.15); }
    </style>
{% endblock %}

{% block body %}
    <section style="padding-top: 2rem; padding-bottom: 60px;">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0"><i class="bi bi-person-badge me-2"></i>Gestion des coachs</h1>
                <a href="{{ path('app_admin_coach_new') }}" class="btn btn-orange">
                    <i class="bi bi-plus-lg me-2"></i>Nouveau coach
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if coaches|length > 0 %}
                <div class="row g-4">
                    {% for coach in coaches %}
                        <div class="col-md-6 col-lg-4">
                            <div class="coach-card">
                                <h5 class="mb-1">{{ coach.fullName ?: coach.email }}</h5>
                                <p class="text-muted small mb-3">{{ coach.email }}</p>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_admin_coach_show', {id: coach.id}) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                                    <a href="{{ path('app_admin_coach_edit', {id: coach.id}) }}" class="btn btn-outline-secondary btn-sm">Modifier</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <p class="text-muted">Aucun coach enregistré.</p>
                    <a href="{{ path('app_admin_coach_new') }}" class="btn btn-orange">Créer un coach</a>
                </div>
            {% endif %}
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
