{% extends 'base.html.twig' %}

{% block title %}Modifier {{ coach.fullName ?: coach.email }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root { --orange-primary: #f97316; }
        .btn-orange { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); border: none; color: white; border-radius: 50px; font-weight: 600; }
        .form-card { max-width: 500px; margin: 0 auto; border: 2px solid #e9ecef; border-radius: 20px; padding: 2rem; }
    </style>
{% endblock %}

{% block body %}
    <section style="padding-top: 2rem; padding-bottom: 60px;">
        <div class="container">
            <a href="{{ path('app_admin_coach_show', {id: coach.id}) }}" class="btn btn-link text-decoration-none mb-4 text-secondary">
                <i class="bi bi-arrow-left me-1"></i>Retour
            </a>
            <div class="form-card">
                <h4 class="mb-4"><i class="bi bi-pencil me-2"></i>Modifier le coach</h4>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-orange mt-3">
                    <i class="bi bi-check-lg me-2"></i>Enregistrer
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
