{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block content %}

<div class="row g-4 pt-4">

    <!-- Title -->
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="h3 mb-0">Manage Users</h1>
        </div>
    </div>

    <!-- Card -->
    <div class="card bg-transparent">

        <!-- Card body -->
        <div class="card-body px-0">

            <div class="table-responsive border-0">
                <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">

                    <!-- Table head -->
                    <thead>
                        <tr>
                            <th class="border-0 rounded-start">Instructor name</th>
                            <th class="border-0">Detail</th>
                            <th class="border-0">Courses</th>
                            <th class="border-0">Total students</th>
                            <th class="border-0 rounded-end">Action</th>
                        </tr>
                    </thead>

                    <!-- Table body -->
                    <tbody>

                        {% set users = [
                            {
                                name: 'Lori Stevens',
                                role: 'Web Designer',
                                courses: 15,
                                students: '5,354',
                                avatar: asset('adminDashboard/assets/images/avatar/09.jpg')
                            },
                            {
                                name: 'Carolyn Ortiz',
                                role: 'Web Developer',
                                courses: 10,
                                students: '15,523',
                                avatar: asset('adminDashboard/assets/images/avatar/01.jpg')
                            },
                            {
                                name: 'Dennis Barrett',
                                role: 'Developer & Instructor',
                                courses: 9,
                                students: '2,546',
                                avatar: asset('adminDashboard/assets/images/avatar/04.jpg')
                            },
                            {
                                name: 'Amanda Reed',
                                role: 'Medical Science',
                                courses: 29,
                                students: '8,546',
                                avatar: asset('adminDashboard/assets/images/avatar/05.jpg')
                            }
                        ] %}

                        {% for user in users %}
                            {% include 'admin/components/manage_accounts/row.html.twig' with { user: user } %}
                        {% endfor %}

                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>

{% endblock %}
