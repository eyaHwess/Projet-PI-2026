{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block content %}

<div class="row g-4 pt-4">

    <!-- Title -->
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="h3 mb-0">Manage Users</h1>
        </div>
    </div>

    <!-- Card -->
    <div class="card bg-transparent">

        <!-- Card body -->
        <div class="card-body px-0">

            <div class="table-responsive border-0">
                <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">

                    <!-- Table head -->
                    <thead>
                        <tr>
                            <th class="border-0 rounded-start">Username</th>
                            <th class="border-0">Goals</th>
                            <th class="border-0">Routines</th>
                            <th class="border-0">Streak days</th>
                            <th class="border-0 rounded-end">Action</th>
                        </tr>
                    </thead>

                    <!-- Table body -->
                    <tbody>

                        {% for user in users %}
                            {% include 'admin/components/manage_accounts/row.html.twig' with { user: user } %}
                        {% endfor %}

                    </tbody>

                </table>
            </div>

            <!-- Pagination -->
            <div class="d-sm-flex justify-content-sm-between align-items-sm-center mt-4 mt-sm-3">
                <!-- Content -->
                <p class="mb-0 text-center text-sm-start">Showing {{ startItem }} to {{ endItem }} of {{ totalItems }} entries</p>
                <!-- Pagination -->
                <nav class="d-flex justify-content-center mb-0" aria-label="navigation">
                    <ul class="pagination pagination-sm pagination-primary-soft d-inline-block d-md-flex rounded mb-0">
                        <!-- Previous button -->
                        <li class="page-item mb-0 {{ currentPage == 1 ? 'disabled' : '' }}">
                            <a class="page-link" href="{{ currentPage > 1 ? path('admin_manage_accounts', {page: currentPage - 1}) : '#' }}" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>
                        
                        <!-- Page numbers -->
                        {% for page in 1..totalPages %}
                            <li class="page-item mb-0 {{ page == currentPage ? 'active' : '' }}">
                                <a class="page-link" href="{{ path('admin_manage_accounts', {page: page}) }}">{{ page }}</a>
                            </li>
                        {% endfor %}
                        
                        <!-- Next button -->
                        <li class="page-item mb-0 {{ currentPage == totalPages ? 'disabled' : '' }}">
                            <a class="page-link" href="{{ currentPage < totalPages ? path('admin_manage_accounts', {page: currentPage + 1}) : '#' }}">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>

</div>

{% endblock %}
