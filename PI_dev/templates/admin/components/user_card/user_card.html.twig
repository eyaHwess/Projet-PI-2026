<div class="col-xxl-4 col-md-6">
    <div class="card shadow h-100">

        <!-- Card header -->
        <div class="card-body d-flex align-items-center">

            <!-- Avatar -->
            <div class="avatar avatar-lg me-3">
                <img class="avatar-img rounded-circle"
                     src="{{ user.avatar ?? asset('adminDashboard/assets/images/avatar/default.jpg') }}"
                     alt="avatar">
            </div>

            <!-- Name + Status/Speciality -->
            <div>
                <h5 class="mb-0">{{ user.name }}</h5>

                {% if user.role is defined and user.role == 'coach' %}
                    <small class="text-muted">
                        Coach : {{ user.speciality }}
                    </small>
                {% elseif user.role is defined and user.role == 'admin' %}
                    <small class="text-muted">
                        Admin : {{ user.status }}
                    </small>
                {% else %}
                    <small class="text-muted">
                        User : {{ user.status }}
                    </small>
                {% endif %}
            </div>

        </div>

        <hr class="my-0">

        <!-- Card body stats -->
        <div class="card-body">

            {% if user.role is defined and user.role == 'coach' %}

                <!-- Coach Stats -->
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Coaching Sessions</span>
                    <strong>{{ user.totalSessions }}</strong>
                </div>

                <div class="d-flex justify-content-between">
                    <span>Total Demandes</span>
                    <strong>{{ user.totalDemandes }}</strong>
                </div>

            {% elseif user.role is defined and user.role == 'admin' %}
             <!-- Admin Info (only personal info) -->
                <div class="d-flex justify-content-between mb-2">
                    <span>Email</span>
                    <strong>{{ user.email }}</strong>
                </div>

                <div class="d-flex justify-content-between">
                    <span>Role Level</span>
                    <strong>{{ user.roleLevel }}</strong>
                </div>
            {% else %}

                <!-- Normal User Stats -->
                <div class="d-flex justify-content-between mb-2">
                    <span>Streak Days</span>
                    <strong>{{ user.streakDays }}</strong>
                </div>

                <div class="d-flex justify-content-between">
                    <span>Routines</span>
                    <strong>{{ user.routines }}</strong>
                </div>

            {% endif %}

        </div>

        <!-- Card footer -->
        <div class="card-footer bg-transparent border-top">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Rating star (only if rating exists) -->
                {% if user.rating is defined %}
                    <ul class="list-inline mb-0">
                        {% for i in 1..5 %}
                            <li class="list-inline-item me-0 small">
                                {% if i <= user.rating %}
                                    <i class="fas fa-star text-warning"></i>
                                {% else %}
                                    <i class="far fa-star text-warning"></i>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div></div>
                {% endif %}

                <!-- Message button -->
                <a href="#"
                class="btn btn-link text-body p-0 mb-0"
                data-bs-toggle="tooltip"
                data-bs-placement="top"
                title="Message">
                    <i class="bi bi-envelope-fill"></i>
                </a>

            </div>
        </div>
    </div>
</div>

