{% extends 'admin/base_admin.html.twig' %}

{% block title %}Détail demande de coaching{% endblock %}

{% block content %}
<div class="row g-4 pt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Détail de la demande</h1>
            <a href="{{ path('admin_coach_requests') }}" class="btn btn-outline-primary"><i class="bi bi-arrow-left me-1"></i> Retour aux demandes</a>
        </div>
    </div>

    <div class="col-12">
        <div class="card bg-transparent border rounded-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-1">Utilisateur</h6>
                        <p class="mb-0">{{ (request.user.firstName ~ ' ' ~ request.user.lastName)|trim ?: request.user.email }}</p>
                        <small class="text-muted">{{ request.user.email }}</small>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-1">Coach</h6>
                        <p class="mb-0">{{ (request.coach.firstName ~ ' ' ~ request.coach.lastName)|trim ?: request.coach.email }}</p>
                        <small class="text-muted">{{ request.coach.speciality ?? '-' }}</small>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="text-muted mb-1">Statut</h6>
                        <span class="badge bg-{{ request.status == 'accepted' ? 'success' : (request.status == 'declined' ? 'secondary' : 'warning') }}">{{ request.status }}</span>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted mb-1">Date de création</h6>
                        <p class="mb-0">{{ request.createdAt ? request.createdAt|date('d/m/Y H:i') : '-' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
