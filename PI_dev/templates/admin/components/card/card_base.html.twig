<div class="col-xxl-4">
  <div class="card shadow h-100">

    <div class="card-header border-bottom d-flex justify-content-between align-items-center p-4">
      <h5 class="card-header-title">{{ title }}</h5>
      <a href="{{ viewAllLink|default('#') }}" class="btn btn-link p-0 mb-0">
        {{ viewAllText|default('View all') }}
      </a>
    </div>

    <div class="card-body p-4">
      {% block content %}{% endblock %}
    </div>

  </div>
</div>
