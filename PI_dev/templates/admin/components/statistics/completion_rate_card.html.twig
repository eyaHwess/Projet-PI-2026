<!-- Completion Rate Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">Completion Rate</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ completionRate }}%</h2>
        <p class="mb-3 text-muted">Average Completion</p>
        
        <!-- Mini Chart -->
        <div id="completionChart"></div>
        
        <div class="mt-3">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Daily tasks completed</span>
                <strong>{{ dailyCompleted }}</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Active streaks</span>
                <strong>{{ activeStreaks }}</strong>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var options = {
        series: [{{ completionRate }}],
        chart: {
            height: 120,
            type: 'radialBar',
        },
        plotOptions: {
            radialBar: {
                hollow: {
                    size: '60%',
                },
                dataLabels: {
                    show: false
                }
            },
        },
        colors: ['#0cbc87'],
        labels: ['Completion'],
    };

    var chart = new ApexCharts(document.querySelector("#completionChart"), options);
    chart.render();
});
</script>
