<!-- User Growth Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">User Growth</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ totalUsers|number_format }}</h2>
        <p class="mb-3 text-muted">Total Users</p>
        
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Week growth</span>
            <span class="text-success">
                <i class="fas fa-arrow-up"></i> {{ weekGrowth }}%
            </span>
        </div>
        
        <div class="d-flex justify-content-between">
            <span class="text-muted">Month growth</span>
            <span class="text-success">
                <i class="fas fa-arrow-up"></i> {{ monthGrowth }}%
            </span>
        </div>
        
        <div class="mt-3">
            <small class="text-muted">New users this week: <strong>{{ newUsersWeek }}</strong></small>
        </div>
    </div>
</div>
