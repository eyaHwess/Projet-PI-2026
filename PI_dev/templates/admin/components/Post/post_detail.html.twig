{% extends 'admin/base_admin.html.twig' %}
{% block title %}Post Details - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('post/posts.css') }}">
{% endblock %}

{% block content %}
<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <a href="{{ path('admin_posts') }}" class="btn btn-link text-decoration-none p-0" style="color: #64748b;">
                <i class="bi bi-arrow-left" style="font-size: 1.5rem;"></i>
            </a>
            <h4 class="mb-0" style="color: #64748b; font-weight: 500;">All Posts</h4>
        </div>
        <div>
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePostModal" style="border-radius: 8px; padding: 0.5rem 1rem; font-size: 0.875rem;">
                <i class="bi bi-trash me-1"></i> Delete Post
            </button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deletePostModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 16px; border: none;">
                <div class="modal-header border-0">
                    <h5 class="modal-title" style="color: #2d3748; font-weight: 600;">Delete Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p style="color: #64748b;">Are you sure you want to delete this post? This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 8px; padding: 0.5rem 1rem; font-size: 0.875rem;">Cancel</button>
                    <form method="post" action="{{ path('admin_post_delete', {id: post.id}) }}" style="display: inline;">
                        <button type="submit" class="btn btn-danger" style="border-radius: 8px; padding: 0.5rem 1rem; font-size: 0.875rem;">
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Post Content -->
        <div class="col-lg-8">
            <div class="card" style="border-radius: 16px; border: 1px solid #e2e8f0; box-shadow: none;">
                <div class="card-body p-4">
                    <!-- Author Info -->
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="d-flex align-items-center justify-content-center" style="width: 56px; height: 56px; background: linear-gradient(135deg, #e879f9 0%, #c084fc 100%); border-radius: 50%; color: white; font-weight: 600; font-size: 1.25rem;">
                            {{ post.createdBy.firstName|slice(0, 1) }}{{ post.createdBy.lastName|slice(0, 1) }}
                        </div>
                        <div>
                            <h5 class="mb-0" style="color: #2d3748; font-weight: 600;">{{ post.createdBy.firstName }} {{ post.createdBy.lastName }}</h5>
                            <p class="mb-0 text-muted" style="font-size: 0.875rem;">{{ post.createdBy.email }}</p>
                            
                            {% if post.tags is defined and post.tags|length > 0 %}
                            <div class="admin-post-tags">
                                {% for tag in post.tags %}
                                <span class="admin-tag-badge">{{ tag.name }}</span>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Post Title -->
                    <h3 class="mb-3" style="color: #2d3748; font-weight: 600;">{{ post.title }}</h3>

                    <!-- Post Content -->
                    <div class="post-content">
                        {{ post.content|raw }}
                    </div>

                    <!-- Comments Section -->
                    <div class="mt-5 admin-comments-section">
                        <h5 class="mb-4 admin-comments-title">Comments ({{ commentsCount }})</h5>
                        
                        {% if post.comments|length > 0 %}
                            <div class="admin-comments-list">
                                {% set displayedComments = 0 %}
                                {% for comment in post.comments %}
                                    {% if not comment.parentComment %}
                                        {% set displayedComments = displayedComments + 1 %}
                                        <div class="mb-4 admin-comment-item comment-item" {% if displayedComments > 3 %}style="display: none;"{% endif %}>
                                            <!-- Comment -->
                                            <div class="admin-comment-content">
                                                <div class="admin-comment-avatar">
                                                    {% if comment.commenter %}
                                                        {{ comment.commenter.firstName|slice(0, 1) }}{{ comment.commenter.lastName|slice(0, 1) }}
                                                    {% else %}
                                                        ?
                                                    {% endif %}
                                                </div>
                                                <div class="admin-comment-body">
                                                    <div class="admin-comment-header">
                                                        <span class="admin-comment-author">
                                                            {% if comment.commenter %}
                                                                {{ comment.commenter.firstName }} {{ comment.commenter.lastName }}
                                                            {% else %}
                                                                Unknown User
                                                            {% endif %}
                                                        </span>
                                                        <span class="admin-comment-date">{{ comment.createdAt|date('d M Y, H:i') }}</span>
                                                        <button class="admin-comment-delete-btn" onclick="deleteComment({{ comment.id }})" title="Delete comment">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                    <p class="admin-comment-text">{{ comment.content }}</p>
                                                </div>
                                            </div>
                                            
                                            <!-- View Replies Button -->
                                            {% if comment.replies|length > 0 %}
                                                <div class="admin-replies-toggle">
                                                    <button class="admin-replies-btn" onclick="toggleReplies({{ comment.id }})">
                                                        <span class="admin-replies-dash">â€”</span>
                                                        <span class="reply-text-{{ comment.id }}">View {{ comment.replies|length }} {{ comment.replies|length == 1 ? 'reply' : 'replies' }}</span>
                                                    </button>
                                                </div>
                                            {% endif %}

                                            <!-- Replies -->
                                            {% if comment.replies|length > 0 %}
                                                <div id="replies-{{ comment.id }}" class="admin-replies-container" style="display: none;">
                                                    {% set displayedReplies = 0 %}
                                                    {% for reply in comment.replies %}
                                                        {% set displayedReplies = displayedReplies + 1 %}
                                                        <div class="admin-reply-item reply-item-{{ comment.id }}" {% if displayedReplies > 2 %}style="display: none !important;"{% endif %}>
                                                            <div class="admin-reply-avatar">
                                                                {% if reply.commenter %}
                                                                    {{ reply.commenter.firstName|slice(0, 1) }}{{ reply.commenter.lastName|slice(0, 1) }}
                                                                {% else %}
                                                                    ?
                                                                {% endif %}
                                                            </div>
                                                            <div class="admin-reply-body">
                                                                <div class="admin-reply-header">
                                                                    <span class="admin-reply-author">
                                                                        {% if reply.commenter %}
                                                                            {{ reply.commenter.firstName }} {{ reply.commenter.lastName }}
                                                                        {% else %}
                                                                            Unknown User
                                                                        {% endif %}
                                                                    </span>
                                                                    <span class="admin-reply-date">{{ reply.createdAt|date('d M Y, H:i') }}</span>
                                                                    <button class="admin-reply-delete-btn" onclick="deleteComment({{ reply.id }})" title="Delete reply">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                                <p class="admin-reply-text">{{ reply.content }}</p>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                    
                                                    <!-- Load More Replies -->
                                                    {% if comment.replies|length > 2 %}
                                                        <button class="admin-load-more-replies load-more-replies-{{ comment.id }}" onclick="loadMoreReplies({{ comment.id }})">
                                                            View more replies ({{ comment.replies|length - 2 }} more)
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                
                                <!-- Load More Comments -->
                                {% set totalTopLevelComments = 0 %}
                                {% for comment in post.comments %}
                                    {% if not comment.parentComment %}
                                        {% set totalTopLevelComments = totalTopLevelComments + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if totalTopLevelComments > 3 %}
                                    <div class="text-center mt-4">
                                        <button class="admin-load-more-comments" onclick="loadMoreComments()">
                                            View more comments ({{ totalTopLevelComments - 3 }} more)
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="admin-no-comments">
                                <i class="bi bi-chat" style="font-size: 3rem; color: #cbd5e0;"></i>
                                <p class="text-muted mt-3 mb-0">No comments yet</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Floating Tab Dock Design -->
        <div class="col-lg-4">
            <div class="post-sidebar-card">
                <div class="tab-content-area">
                    <!-- Tab 1: General Information -->
                    <div class="sidebar-tab-content active" data-tab="general">
                        <h6 style="color: #64748b; font-weight: 600; font-size: 0.875rem; margin-bottom: 1rem;">GENERAL INFORMATION</h6>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Author Name</label>
                            <p style="color: #2d3748; font-weight: 500; margin-bottom: 0;">{{ post.createdBy.firstName }} {{ post.createdBy.lastName }}</p>
                        </div>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Author Email</label>
                            <p style="color: #2d3748; font-weight: 500; margin-bottom: 0;">{{ post.createdBy.email }}</p>
                        </div>
                        
                        {% if post.tags is defined and post.tags|length > 0 %}
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Tags</label>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                {% for tag in post.tags %}
                                <span class="admin-tag-badge">{{ tag.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Created At</label>
                            <p style="color: #2d3748; font-weight: 500; margin-bottom: 0;">{{ post.createdAt|date('d M Y, H:i') }}</p>
                        </div>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Last Updated</label>
                            <p style="color: #2d3748; font-weight: 500; margin-bottom: 0;">{{ post.updatedAt|date('d M Y, H:i') }}</p>
                        </div>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Status</label>
                            <p style="margin-bottom: 0;">
                                <span class="badge" style="background: #10b981; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">Published</span>
                            </p>
                        </div>
                    </div>

                    <!-- Tab 2: Metrics & Analytics -->
                    <div class="sidebar-tab-content" data-tab="metrics">
                        <h6 style="color: #64748b; font-weight: 600; font-size: 0.875rem; margin-bottom: 1rem;">POST METRICS</h6>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div style="background: rgba(168, 85, 247, 0.05); padding: 1rem; border-radius: 12px;">
                                    <div style="color: #94a3b8; font-size: 0.75rem; font-weight: 500; margin-bottom: 0.25rem;">LIKES</div>
                                    <div style="color: #2d3748; font-size: 1.5rem; font-weight: 600;">{{ likesCount }}</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div style="background: rgba(59, 130, 246, 0.05); padding: 1rem; border-radius: 12px;">
                                    <div style="color: #94a3b8; font-size: 0.75rem; font-weight: 500; margin-bottom: 0.25rem;">COMMENTS</div>
                                    <div style="color: #2d3748; font-size: 1.5rem; font-weight: 600;">{{ commentsCount }}</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div style="background: rgba(16, 185, 129, 0.05); padding: 1rem; border-radius: 12px;">
                                    <div style="color: #94a3b8; font-size: 0.75rem; font-weight: 500; margin-bottom: 0.25rem;">VIEWS</div>
                                    <div style="color: #2d3748; font-size: 1.5rem; font-weight: 600;">{{ post.viewCount }}</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div style="background: rgba(245, 158, 11, 0.05); padding: 1rem; border-radius: 12px;">
                                    <div style="color: #94a3b8; font-size: 0.75rem; font-weight: 500; margin-bottom: 0.25rem;">CLICKS</div>
                                    <div style="color: #2d3748; font-size: 1.5rem; font-weight: 600;">{{ post.clickCount }}</div>
                                </div>
                            </div>
                        </div>
                        
                        <h6 style="color: #64748b; font-weight: 600; font-size: 0.875rem; margin-bottom: 1rem; margin-top: 2rem;">ANALYTICS</h6>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Engagement Rate</label>
                                <span style="color: #2d3748; font-weight: 600; font-size: 0.875rem;">{{ engagementRate }}%</span>
                            </div>
                            <div class="progress" style="height: 8px; border-radius: 8px; background: #e2e8f0;">
                                <div class="progress-bar" style="width: {{ engagementRate }}%; background: linear-gradient(90deg, #a855f7 0%, #7c3aed 100%); border-radius: 8px;"></div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">CTR (Click-Through Rate)</label>
                                <span style="color: #2d3748; font-weight: 600; font-size: 0.875rem;">{{ ctr }}%</span>
                            </div>
                            <div class="progress" style="height: 8px; border-radius: 8px; background: #e2e8f0;">
                                <div class="progress-bar" style="width: {{ ctr }}%; background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%); border-radius: 8px;"></div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Interaction Score</label>
                            <p style="margin-bottom: 0; margin-top: 0.5rem;">
                                {% if interactionScore == 'High' %}
                                <span class="badge" style="background: #10b981; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">High</span>
                                {% elseif interactionScore == 'Medium' %}
                                <span class="badge" style="background: #3b82f6; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">Medium</span>
                                {% else %}
                                <span class="badge" style="background: #94a3b8; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">Low</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <!-- Tab 3: Trends & Tag Performance -->
                    <div class="sidebar-tab-content" data-tab="trends">
                        <h6 style="color: #64748b; font-weight: 600; font-size: 0.875rem; margin-bottom: 1rem;">TREND ANALYTICS</h6>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Views (7 days)</label>
                            <p style="color: #2d3748; font-weight: 600; font-size: 1.25rem; margin-bottom: 0;">{{ trendData.views7d }}</p>
                        </div>
                        
                        <div class="mb-3">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Growth</label>
                            <p style="color: #2d3748; font-weight: 600; font-size: 1.25rem; margin-bottom: 0;">{{ trendData.growth }}%</p>
                        </div>
                        
                        <div class="mb-4">
                            <label style="color: #94a3b8; font-size: 0.8125rem; font-weight: 500;">Status</label>
                            <p style="margin-bottom: 0; margin-top: 0.5rem;">
                                {% if trendData.statusClass == 'trending' %}
                                <span class="badge" style="background: #ef4444; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">ðŸ”¥ Trending</span>
                                {% elseif trendData.statusClass == 'growing' %}
                                <span class="badge" style="background: #10b981; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">â¬† Growing</span>
                                {% elseif trendData.statusClass == 'declining' %}
                                <span class="badge" style="background: #f59e0b; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">â¬‡ Declining</span>
                                {% else %}
                                <span class="badge" style="background: #94a3b8; color: white; padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.8125rem;">Stable</span>
                                {% endif %}
                            </p>
                        </div>
                        
                        {% if tagPerformance|length > 0 %}
                        <h6 style="color: #64748b; font-weight: 600; font-size: 0.875rem; margin-bottom: 1rem; margin-top: 2rem;">TAG PERFORMANCE</h6>
                        
                        {% for item in tagPerformance %}
                        <div class="mb-3 p-3" style="background: rgba(168, 85, 247, 0.05); border-radius: 12px;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="admin-tag-badge">{{ item.tag.name }}</span>
                                <span style="color: #94a3b8; font-size: 0.75rem;">Rank #{{ item.stats.rank }}</span>
                            </div>
                            <div style="color: #64748b; font-size: 0.8125rem;">
                                <div>Popularity: {{ item.stats.popularityIndex }}%</div>
                                <div>Usage: {{ item.stats.usageCount }} posts</div>
                            </div>
                        </div>
                        {% endfor %}
                        {% endif %}
                    </div>
                </div>
                
                <!-- Floating Tab Buttons Dock -->
                <div class="floating-tab-buttons">
                    <button class="floating-tab-btn active" data-tab="general" type="button">
                        <i class="bi bi-info-circle"></i>
                        <span class="tab-label">General</span>
                    </button>
                    <button class="floating-tab-btn" data-tab="metrics" type="button">
                        <i class="bi bi-graph-up"></i>
                        <span class="tab-label">Metrics</span>
                    </button>
                    <button class="floating-tab-btn" data-tab="trends" type="button">
                        <i class="bi bi-activity"></i>
                        <span class="tab-label">Trends</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleReplies(commentId) {
    const repliesContainer = document.getElementById('replies-' + commentId);
    const replyText = document.querySelector('.reply-text-' + commentId);
    
    if (repliesContainer.style.display === 'none') {
        repliesContainer.style.display = 'block';
        replyText.textContent = 'Hide replies';
    } else {
        repliesContainer.style.display = 'none';
        const repliesCount = document.querySelectorAll('#replies-' + commentId + ' .admin-reply-item').length;
        replyText.textContent = 'View ' + repliesCount + (repliesCount === 1 ? ' reply' : ' replies');
    }
}

function loadMoreReplies(commentId) {
    const hiddenReplies = document.querySelectorAll('#replies-' + commentId + ' .reply-item-' + commentId + '[style*="display: none"]');
    hiddenReplies.forEach(reply => {
        reply.style.display = 'flex';
    });
    
    const loadMoreBtn = document.querySelector('.load-more-replies-' + commentId);
    if (loadMoreBtn) {
        loadMoreBtn.style.display = 'none';
    }
}

function loadMoreComments() {
    const hiddenComments = document.querySelectorAll('.comment-item[style*="display: none"]');
    hiddenComments.forEach(comment => {
        comment.style.display = 'flex';
    });
    
    const loadMoreBtn = document.querySelector('.admin-load-more-comments');
    if (loadMoreBtn) {
        loadMoreBtn.parentElement.style.display = 'none';
    }
}

function deleteComment(commentId) {
    if (confirm('Are you sure you want to delete this comment?')) {
        fetch('/admin/comments/' + commentId + '/delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to delete comment');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while deleting the comment');
        });
    }
}

// Vanilla JS Tab Switching - NO Bootstrap
// Note: This page can be loaded via Turbo; DOMContentLoaded may not fire on navigation.
function setPostDetailActiveTab(targetTab) {
    const tabButtons = document.querySelectorAll('.floating-tab-btn');
    const tabContents = document.querySelectorAll('.sidebar-tab-content');

    tabButtons.forEach((btn) => {
        btn.classList.toggle('active', btn.getAttribute('data-tab') === targetTab);
    });

    tabContents.forEach((content) => {
        const isActive = content.getAttribute('data-tab') === targetTab;
        content.classList.toggle('active', isActive);
        // Force visibility to match requirement: only one section visible.
        content.style.display = isActive ? 'block' : 'none';
    });
}

function syncPostDetailTabsInitialState() {
    const activeButton = document.querySelector('.floating-tab-btn.active');
    const fallbackTab = document.querySelector('.floating-tab-btn')?.getAttribute('data-tab') || 'general';
    const targetTab = activeButton?.getAttribute('data-tab') || fallbackTab;
    setPostDetailActiveTab(targetTab);
}

function bindPostDetailTabClicksOnce() {
    if (document.documentElement.dataset.postDetailTabsBound === '1') {
        return;
    }
    document.documentElement.dataset.postDetailTabsBound = '1';

    document.addEventListener('click', (event) => {
        const button = event.target.closest('.floating-tab-btn');
        if (!button) return;

        event.preventDefault();
        const targetTab = button.getAttribute('data-tab') || 'general';
        setPostDetailActiveTab(targetTab);
    });
}

function initPostDetailTabs() {
    bindPostDetailTabClicksOnce();
    syncPostDetailTabsInitialState();
}

document.addEventListener('DOMContentLoaded', initPostDetailTabs);
document.addEventListener('turbo:load', initPostDetailTabs);
</script>
{% endblock %}
