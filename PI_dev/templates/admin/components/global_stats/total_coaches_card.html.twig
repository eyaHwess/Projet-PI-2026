<!-- Total Coaches Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">Total Coaches</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ totalCoaches|number_format }}</h2>
        <p class="mb-3 text-muted">Active Coaches</p>
        
        <div class="d-flex align-items-center mb-3">
            <div class="me-2">
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star-half-alt text-warning"></i>
            </div>
            <span class="fw-bold">{{ averageRating }}</span>
        </div>
        
        <div class="d-flex justify-content-between">
            <span class="text-muted">Total sessions</span>
            <strong>{{ totalSessions }}</strong>
        </div>
    </div>
</div>
