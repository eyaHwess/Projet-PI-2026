<!-- Total Platform Users Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">Total Platform Users</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ totalUsers|number_format }}</h2>
        <p class="mb-3 text-muted">Registered Users</p>
        
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">This month</span>
            <span class="text-success">
                <i class="fas fa-arrow-up"></i> {{ monthGrowth }}%
            </span>
        </div>
        
        <div class="d-flex justify-content-between">
            <span class="text-muted">This year</span>
            <span class="text-success">
                <i class="fas fa-arrow-up"></i> {{ yearGrowth }}%
            </span>
        </div>
        
        <div class="mt-3">
            <small class="text-muted">New this month: <strong>{{ newUsersMonth }}</strong></small>
        </div>
    </div>
</div>
