<!-- Total Routines Created Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">Total Routines Created</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ totalRoutines|number_format }}</h2>
        <p class="mb-3 text-muted">All-time Routines</p>
        
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Active routines</span>
            <strong>{{ activeRoutines }}</strong>
        </div>
        
        <div class="d-flex justify-content-between">
            <span class="text-muted">Completed routines</span>
            <strong>{{ completedRoutines }}</strong>
        </div>
        
        <div class="mt-3">
            <small class="text-muted">Created this week: <strong>{{ newRoutinesWeek }}</strong></small>
        </div>
    </div>
</div>
