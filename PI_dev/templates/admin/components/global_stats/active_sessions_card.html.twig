<!-- Active Sessions Card -->
<div class="card bg-transparent border h-100">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="card-header-title mb-0">Active Sessions</h5>
    </div>
    <div class="card-body">
        <h2 class="mb-0">{{ activeSessions|number_format }}</h2>
        <p class="mb-3 text-muted">In Progress</p>
        
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Scheduled today</span>
            <strong>{{ scheduledToday }}</strong>
        </div>
        
        <div class="d-flex justify-content-between">
            <span class="text-muted">Completed today</span>
            <strong>{{ completedToday }}</strong>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-success bg-opacity-10 text-success">
                <i class="fas fa-circle me-1" style="font-size: 8px;"></i>
                {{ activeSessions }} Live Now
            </span>
        </div>
    </div>
</div>
