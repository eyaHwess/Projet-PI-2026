{% extends 'base.html.twig' %}

{% block title %}My Drafts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Posts Custom CSS -->
    <link rel="stylesheet" href="{{ asset('post/posts.css') }}">
    <!-- CKEditor 5 CSS -->
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/43.3.1/ckeditor5.css" />
{% endblock %}

{% block body %}
<script>
    // Add posts-page class to body
    document.body.classList.add('posts-page');
</script>

<div class="posts-container">
    <!-- Header with Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #2d3748; font-weight: 600;">
                <i class="bi bi-file-earmark-text me-2"></i>
                My Drafts
            </h2>
            <p class="text-muted mb-0">Manage your unpublished posts</p>
        </div>
        <button class="btn btn-glass" onclick="window.location.href='{{ path('post_list_view') }}'">
            <i class="bi bi-arrow-left me-2"></i>
            Back to Posts
        </button>
    </div>

    <!-- Drafts List -->
    <div class="vstack gap-4">
        {% if drafts is defined and drafts|length > 0 %}
            {% for draft in drafts %}
                <div class="card post-card border shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h3 class="mb-2" style="font-size: 1.5rem; font-weight: 600; color: #2d3748;">
                                    {{ draft.title }}
                                </h3>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    Last edited: {{ draft.updatedAt|date('d M Y, H:i') }}
                                </small>
                            </div>
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-file-earmark me-1"></i>
                                Draft
                            </span>
                        </div>
                        
                        <div class="post-content mb-3" style="max-height: 150px; overflow: hidden;">
                            {{ draft.content|raw|striptags|slice(0, 200) }}...
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary-glass btn-sm" onclick="editDraft({{ draft.id }})">
                                <i class="bi bi-pencil me-1"></i>
                                Edit
                            </button>
                            <button class="btn btn-glass btn-sm" onclick="publishDraft({{ draft.id }})">
                                <i class="bi bi-send me-1"></i>
                                Publish
                            </button>
                            <button class="btn btn-glass btn-sm text-danger" onclick="deleteDraft({{ draft.id }})">
                                <i class="bi bi-trash me-1"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-file-earmark-text display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No drafts yet</h4>
                <p class="text-muted">Your draft posts will appear here</p>
                <button class="btn btn-primary-glass mt-3" onclick="window.location.href='{{ path('post_list_view') }}'">
                    <i class="bi bi-plus-circle me-2"></i>
                    Create Your First Post
                </button>
            </div>
        {% endif %}
    </div>
</div>

<script>
function editDraft(draftId) {
    // Redirect to post list with edit mode
    window.location.href = '/posts?edit=' + draftId;
}

function publishDraft(draftId) {
    if (confirm('Are you sure you want to publish this draft?')) {
        fetch('/posts/' + draftId + '/publish', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Failed to publish draft');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to publish draft');
        });
    }
}

function deleteDraft(draftId) {
    if (confirm('Are you sure you want to delete this draft? This action cannot be undone.')) {
        fetch('/posts/' + draftId + '/delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Failed to delete draft');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to delete draft');
        });
    }
}
</script>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
