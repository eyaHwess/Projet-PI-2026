{# Delete Post Confirmation Modal #}
<div class="modal fade" id="deletePostModal{{ postId }}" tabindex="-1" aria-labelledby="deletePostModalLabel{{ postId }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">

            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="deletePostModalLabel{{ postId }}">
                    <i class="bi bi-trash-fill text-danger me-2"></i>
                    Delete Post
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body text-center">
                <div class="mb-3">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
                </div>

                <p class="mb-0 text-muted">
                    Are you sure you want to delete this post completely?<br>
                    <strong>This action cannot be undone.</strong>
                </p>
            </div>

            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    Cancel
                </button>

                <form method="post" action="{{ path('post_delete', {id: postId}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ postId) }}">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-1"></i>
                        Delete
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>