{# Homepage Navbar Component #}
<div class="invisible" style="translate: none; rotate: none; scale: none; visibility: visible; opacity: 1; transform: translate(0px, 0px);">
    <nav class="fixed w-full top-0 z-50 px-4 md:px-16 lg:px-24 xl:px-32 py-4 border-b transition-all duration-300 border-neutral-300">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <a href="{{ path('app_home') }}">
                <img alt="DayFlow Logo" width="160" height="50" src="{{ asset('images/dayflow_logo.png') }}">
            </a>
            <div class="hidden md:flex gap-3 items-center">
                {% if app.user %}
                    <a href="{{ path('user_dashboard') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Accueil</a>
                    <a href="{{ path('post_list_view') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Posts</a>
                    {% if is_granted('ROLE_USER') and not is_granted('ROLE_COACH') %}
                        <a href="{{ path('app_goal_index') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Mes objectifs</a>
                    {% elseif is_granted('ROLE_COACH') %}
                        <a href="{{ path('app_coach_index') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Mes coachings</a>
                    {% endif %}
                    <a href="#features" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Fonctionnalités</a>
                    <a href="#testimonials" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Motivation</a>
                {% else %}
                    <a href="{{ path('app_home') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Accueil</a>
                    <a href="{{ path('post_list_view') }}" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Posts</a>
                    <a href="#features" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Fonctionnalités</a>
                    <a href="#testimonials" class="py-1 px-3 text-zinc-800 hover:text-purple-600">Motivation</a>
                {% endif %}
            </div>
            <button id="openMenu" class="md:hidden p-2 text-zinc-800 hover:text-purple-600" aria-label="Menu">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu size-6.5" aria-hidden="true">
                    <path d="M4 5h16"></path>
                    <path d="M4 12h16"></path>
                    <path d="M4 19h16"></path>
                </svg>
            </button>
            {% if app.user %}
                <div class="hidden md:flex items-center gap-3">
                    {% if is_granted('ROLE_USER') and not is_granted('ROLE_COACH') %}
                        <a href="{{ path('app_goal_index') }}" class="py-2.5 px-6 rounded-full font-medium text-white hover:opacity-90" style="background-color: #7c3aed;">
                            Mes objectifs
                        </a>
                    {% elseif is_granted('ROLE_COACH') %}
                        <a href="{{ path('app_coach_index') }}" class="py-2.5 px-6 rounded-full font-medium text-white hover:opacity-90" style="background-color: #7c3aed;">
                            Voir les coaches
                        </a>
                    {% endif %}
                    <a href="{{ path('user_dashboard') }}" class="flex items-center justify-center w-10 h-10 rounded-full overflow-hidden border-2 border-purple-600 hover:border-purple-700 transition-colors">
                        {% if app.user.photoUrl %}
                            <img src="{{ app.user.photoUrl }}" alt="{{ app.user.firstName }}" class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full bg-purple-600 flex items-center justify-center text-white font-semibold">
                                {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                            </div>
                        {% endif %}
                    </a>
                </div>
            {% else %}
                <a href="{{ path('app_register') }}" class="hidden md:inline-block py-2.5 px-6 rounded-full font-medium text-white hover:opacity-90" style="background-color: #7c3aed;">
                    Commencer
                </a>
            {% endif %}
        </div>
    </nav>
</div>

