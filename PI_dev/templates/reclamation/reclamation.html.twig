{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto px-4 py-8">
    <div class="bg-gradient-to-br from-pink-50 to-purple-50 rounded-2xl shadow-lg border border-purple-100 p-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gradient-to-r from-pink-300 to-purple-300 rounded-full flex items-center justify-center">
                    <i class="bi bi-plus-circle text-white text-xl"></i>
                </div>
                Nouvelle Réclamation
            </h1>
            <p class="text-gray-600 ml-13">Décrivez votre problème ou suggestion. Notre équipe vous répondra rapidement.</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-8', 'enctype': 'multipart/form-data'}}) }}
            <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100">
                {{ form_label(form.type, 'Type de réclamation', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-3'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-3 border-2 border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-purple-300 transition-all duration-300'}}) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100">
                {{ form_label(form.content, 'Description détaillée', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-3'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-3 border-2 border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-purple-300 transition-all duration-300', 'rows': '6', 'placeholder': 'Décrivez votre problème en détail...'}}) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100">
                {{ form_label(form.photo, 'Photo (optionnelle)', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-3'}}) }}
                <div class="relative">
                    {{ form_widget(form.photo, {'attr': {'class': 'w-full px-4 py-3 border-2 border-dashed border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-purple-300 transition-all duration-300 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-gradient-to-r file:from-pink-300 file:to-purple-300 file:text-white hover:file:from-pink-400 hover:file:to-purple-400'}}) }}
                </div>
                <p class="text-xs text-gray-500 mt-2">Formats acceptés: JPEG, PNG, GIF, WebP (max 5MB)</p>
                {{ form_errors(form.photo) }}
            </div>

            <div class="flex items-center justify-between pt-6">
                <a href="{{ path('reclamation_index') }}" class="text-gray-600 hover:text-gray-800 flex items-center gap-2 px-4 py-2 rounded-xl hover:bg-gray-100 transition-all duration-300">
                    <i class="bi bi-arrow-left"></i>
                    Retour à mes réclamations
                </a>
                <button type="submit" class="bg-gradient-to-r from-pink-400 to-purple-400 hover:from-pink-500 hover:to-purple-500 text-white px-8 py-3 rounded-xl transition-all duration-300 flex items-center gap-2 shadow-lg hover:shadow-xl transform hover:scale-105">
                    <i class="bi bi-send"></i>
                    Envoyer la réclamation
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
