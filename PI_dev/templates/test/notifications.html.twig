<script>
// Mettre √† jour l'affichage du statut de permission
function updatePermissionStatus() {
    const statusDisplay = document.getElementById('permission-status-display');
    const permission = Notification.permission;
    
    let badgeClass = 'status-default';
    let statusText = 'En attente';
    
    if (permission === 'granted') {
        badgeClass = 'status-granted';
        statusText = '‚úÖ Activ√©es';
    } else if (permission === 'denied') {
        badgeClass = 'status-denied';
        statusText = '‚ùå Refus√©es';
    }
    
    statusDisplay.innerHTML = `<span class="status-badge ${badgeClass}">${statusText}</span>`;
}

// Mettre √† jour au chargement
document.addEventListener('DOMContentLoaded', () => {
    updatePermissionStatus();
    
    // Mettre √† jour toutes les 2 secondes
    setInterval(updatePermissionStatus, 2000);
});
