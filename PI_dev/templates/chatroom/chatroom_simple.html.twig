{% extends 'base.html.twig' %}

{% block title %}Chatroom - {{ goal.title }}{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #8b9dc3 0%, #dfe3ee 100%);
        min-height: 100vh;
        padding: 20px;
    }

    .chat-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        height: calc(100vh - 40px);
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    /* Header */
    .chat-header {
        padding: 20px;
        border-bottom: 1px solid #e5e7eb;
        background: white;
    }

    .chat-header h1 {
        font-size: 24px;
        color: #1f2937;
        margin-bottom: 5px;
    }

    .chat-header p {
        color: #6b7280;
        font-size: 14px;
    }

    .back-btn {
        display: inline-block;
        padding: 8px 16px;
        background: #f3f4f6;
        color: #6b7280;
        text-decoration: none;
        border-radius: 8px;
        margin-bottom: 10px;
        transition: all 0.2s;
    }

    .back-btn:hover {
        background: #e5e7eb;
    }

    /* Messages Area */
    .messages-area {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #f9fafb;
    }

    .message {
        margin-bottom: 20px;
        display: flex;
        gap: 12px;
    }

    .message.own {
        flex-direction: row-reverse;
    }

    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #8b9dc3, #a8b5d1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        flex-shrink: 0;
    }

    .message-content {
        max-width: 60%;
    }

    .message-bubble {
        padding: 12px 16px;
        border-radius: 16px;
        margin-bottom: 4px;
        word-wrap: break-word;
    }

    .message:not(.own) .message-bubble {
        background: white;
        border: 1px solid #e5e7eb;
    }

    .message.own .message-bubble {
        background: linear-gradient(135deg, #8b9dc3, #a8b5d1);
        color: white;
    }

    .message-time {
        font-size: 11px;
        color: #9ca3af;
        padding: 0 8px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #9ca3af;
    }

    .empty-state i {
        font-size: 48px;
        margin-bottom: 16px;
        display: block;
    }

    /* Input Area */
    .input-area {
        padding: 20px;
        border-top: 1px solid #e5e7eb;
        background: white;
    }

    .notice {
        padding: 20px;
        background: #fef3c7;
        border: 1px solid #fbbf24;
        border-radius: 12px;
        text-align: center;
    }

    .notice.pending {
        background: #dbeafe;
        border-color: #3b82f6;
    }

    .notice.locked {
        background: #fee2e2;
        border-color: #ef4444;
    }

    .notice h3 {
        margin-bottom: 8px;
        color: #1f2937;
    }

    .notice p {
        color: #6b7280;
        margin-bottom: 12px;
    }

    .btn-join {
        display: inline-block;
        padding: 10px 20px;
        background: #8b9dc3;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-join:hover {
        background: #7a8db3;
        transform: translateY(-1px);
    }

    /* Form */
    .chat-form {
        display: flex;
        gap: 12px;
        align-items: flex-end;
    }

    .form-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #8b9dc3, #a8b5d1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        flex-shrink: 0;
    }

    .form-inputs {
        flex: 1;
        display: flex;
        gap: 8px;
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 8px;
    }

    .form-inputs:focus-within {
        border-color: #8b9dc3;
        box-shadow: 0 0 0 3px rgba(139, 157, 195, 0.1);
    }

    .chat-input {
        flex: 1;
        border: none;
        background: transparent;
        padding: 8px;
        font-size: 14px;
        outline: none;
        resize: none;
        min-height: 40px;
        max-height: 120px;
        font-family: inherit;
    }

    .form-btn {
        width: 40px;
        height: 40px;
        border: none;
        background: transparent;
        color: #6b7280;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-btn:hover {
        background: #e5e7eb;
        color: #1f2937;
    }

    .form-btn.send {
        background: #8b9dc3;
        color: white;
    }

    .form-btn.send:hover {
        background: #7a8db3;
    }

    .badge {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge.owner {
        background: #fbbf24;
        color: #78350f;
    }

    .badge.admin {
        background: #8b9dc3;
        color: white;
    }

    .badge.member {
        background: #e5e7eb;
        color: #6b7280;
    }
</style>

<div class="chat-wrapper">
    <!-- Header -->
    <div class="chat-header">
        <a href="{{ path('goal_list') }}" class="back-btn">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        <h1>
            {{ goal.title }}
            {% if currentUserParticipation %}
                <span class="badge {{ currentUserParticipation.role|lower }}">
                    {{ currentUserParticipation.role }}
                </span>
            {% endif %}
        </h1>
        <p>
            <i class="fas fa-users"></i> 
            {{ goal.goalParticipations|length }} participant(s)
        </p>
    </div>

    <!-- Messages -->
    <div class="messages-area" id="messagesArea">
        {% if chatroom.messages|length > 0 %}
            {% for message in chatroom.messages %}
                <div class="message {% if app.user and message.author.id == app.user.id %}own{% endif %}">
                    <div class="message-avatar">
                        {{ message.author.firstName|first }}{{ message.author.lastName|first }}
                    </div>
                    <div class="message-content">
                        <div class="message-bubble">
                            {{ message.content }}
                        </div>
                        <div class="message-time">
                            {{ message.createdAt|date('H:i') }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <i class="fas fa-comments"></i>
                <h3>Aucun message pour le moment</h3>
                <p>Soyez le premier à démarrer la conversation!</p>
            </div>
        {% endif %}
    </div>

    <!-- Input Area -->
    <div class="input-area">
        {% if currentUserParticipation is defined and currentUserParticipation and currentUserParticipation.isPending() %}
            <!-- Pending -->
            <div class="notice pending">
                <h3><i class="fas fa-clock"></i> Demande en attente</h3>
                <p>Votre demande d'accès est en attente d'approbation par les administrateurs.</p>
            </div>
        {% elseif isMember is defined and not isMember %}
            <!-- Not Member -->
            <div class="notice locked">
                <h3><i class="fas fa-lock"></i> Accès restreint</h3>
                <p>Vous devez être membre de ce goal pour envoyer des messages.</p>
                <a href="{{ path('goal_join', {id: goal.id}) }}" class="btn-join">
                    <i class="fas fa-user-plus"></i> Rejoindre le goal
                </a>
            </div>
        {% elseif form is not null %}
            <!-- Form -->
            {{ form_start(form, {'attr': {'class': 'chat-form', 'id': 'chatForm'}}) }}
                <div class="form-avatar">
                    {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                </div>
                <div class="form-inputs">
                    {{ form_widget(form.content, {
                        'attr': {
                            'class': 'chat-input',
                            'placeholder': 'Écrivez votre message...',
                            'rows': 1
                        }
                    }) }}
                    <button type="button" class="form-btn" title="Joindre un fichier">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button type="submit" class="form-btn send" title="Envoyer">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
</div>

<script>
// Auto-scroll to bottom
const messagesArea = document.getElementById('messagesArea');
if (messagesArea) {
    messagesArea.scrollTop = messagesArea.scrollHeight;
}

// Auto-resize textarea
const chatInput = document.querySelector('.chat-input');
if (chatInput) {
    chatInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = Math.min(this.scrollHeight, 120) + 'px';
    });
}

// Form submission
const chatForm = document.getElementById('chatForm');
if (chatForm) {
    chatForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const content = formData.get('message[content]');
        
        if (!content || content.trim() === '') {
            alert('Veuillez entrer un message');
            return;
        }
        
        fetch(this.action, {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Reload page to show new message
                window.location.reload();
            } else {
                alert(data.error || 'Erreur lors de l\'envoi du message');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de l\'envoi du message');
        });
    });
}
</script>
{% endblock %}
