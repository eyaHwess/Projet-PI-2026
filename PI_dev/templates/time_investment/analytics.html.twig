{% extends 'base.html.twig' %}

{% block title %}Time Investment Analytics{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #9333ea;
            --primary-hover: #7e22ce;
        }
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background-color: #ffffff;
        }
        .content-section {
            background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
            padding-top: 120px;
            padding-bottom: 60px;
            min-height: 100vh;
        }
        .stats-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.06);
            text-align: center;
            border: 2px solid #f3f4f6;
            transition: all 0.3s ease;
            height: 100%;
        }
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(147, 51, 234, 0.15);
            border-color: var(--primary-color);
        }
        .stats-value {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #9333ea 0%, #7e22ce 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .stats-label {
            color: #6b7280;
            font-size: 0.95rem;
            margin-top: 0.5rem;
            font-weight: 600;
        }
        .chart-container {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            margin-bottom: 2rem;
        }
        .progress-ring {
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }
        .goal-time-card {
            background: white;
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        .goal-time-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 4px 15px rgba(147, 51, 234, 0.1);
        }
        .time-bar {
            height: 40px;
            background: linear-gradient(90deg, #9333ea 0%, #7e22ce 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            transition: all 0.3s ease;
        }
        .time-bar:hover {
            transform: scaleX(1.02);
        }
        .weekly-chart {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            gap: 0.5rem;
            height: 200px;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 15px;
        }
        .day-bar-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }
        .day-bar {
            width: 100%;
            min-height: 10px;
            background: linear-gradient(180deg, #9333ea 0%, #7e22ce 100%);
            border-radius: 8px 8px 0 0;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding-top: 0.5rem;
        }
        .day-bar:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(147, 51, 234, 0.3);
        }
        .day-value {
            color: white;
            font-size: 0.7rem;
            font-weight: 700;
        }
        .day-label {
            font-size: 0.75rem;
            font-weight: 600;
            color: #6b7280;
            text-align: center;
        }
        .alert-overload {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            border: 2px solid #ef4444;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        .alert-imbalance {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border: 2px solid #f59e0b;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        .efficiency-badge {
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.85rem;
        }
        .efficiency-excellent {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }
        .efficiency-good {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
        }
        .efficiency-poor {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }
        .donut-chart {
            position: relative;
            width: 250px;
            height: 250px;
            margin: 0 auto;
        }
        .donut-segment {
            transition: all 0.3s ease;
        }
        .donut-segment:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content-section">
        <div class="container py-5">
            <h1 class="display-5 fw-bold mb-4">
                <i class="bi bi-clock-history me-3" style="color: var(--primary-color);"></i>Time Investment Analytics
            </h1>
            <p class="text-muted mb-5">Analysez votre investissement temps et optimisez votre productivité</p>

            <!-- Alerts -->
            {% if analytics.weeklyTime.hasOverload %}
                <div class="alert-overload">
                    <h5 class="fw-bold text-danger mb-2">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Surcharge de travail détectée!
                    </h5>
                    <p class="mb-0">
                        Vous avez investi <strong>{{ analytics.weeklyTime.hours }}h</strong> cette semaine, 
                        dépassant le seuil recommandé de <strong>{{ analytics.weeklyTime.threshold }}h</strong>.
                        Pensez à prendre du repos!
                    </p>
                </div>
            {% endif %}

            {% if analytics.imbalance %}
                <div class="alert-imbalance">
                    <h5 class="fw-bold mb-2" style="color: #92400e;">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>Déséquilibre détecté
                    </h5>
                    <p class="mb-0">
                        Le goal "<strong>{{ analytics.imbalance.goal.title }}</strong>" consomme 
                        <strong>{{ analytics.imbalance.percentage }}%</strong> de votre temps total.
                        {{ analytics.imbalance.warning }}
                    </p>
                </div>
            {% endif %}

            <!-- Stats Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-3">
                    <div class="stats-card">
                        <i class="bi bi-clock-fill mb-3" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                        <div class="stats-value">{{ analytics.weeklyTime.hours }}h</div>
                        <div class="stats-label">Cette semaine</div>
                        <small class="text-muted">{{ analytics.weeklyTime.minutes }} minutes</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <i class="bi bi-calendar-week mb-3" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                        <div class="stats-value">{{ (analytics.totalTime / 60)|round(1) }}h</div>
                        <div class="stats-label">Temps total</div>
                        <small class="text-muted">Tous les goals</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <i class="bi bi-bullseye mb-3" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                        <div class="stats-value">{{ analytics.totalGoals }}</div>
                        <div class="stats-label">Goals actifs</div>
                        <small class="text-muted">En cours</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <i class="bi bi-trophy mb-3" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                        <div class="stats-value">
                            {% if analytics.mostTimeConsuming %}
                                #1
                            {% else %}
                                -
                            {% endif %}
                        </div>
                        <div class="stats-label">Goal prioritaire</div>
                        <small class="text-muted">
                            {% if analytics.mostTimeConsuming %}
                                {{ analytics.mostTimeConsuming.goal.title|slice(0, 20) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>

            <!-- Weekly Breakdown -->
            <div class="chart-container">
                <h3 class="h5 fw-bold mb-4">
                    <i class="bi bi-bar-chart-line me-2" style="color: var(--primary-color);"></i>
                    Répartition hebdomadaire
                </h3>
                <div class="weekly-chart">
                    {% set maxHours = 0 %}
                    {% for day in weeklyBreakdown %}
                        {% if day.hours > maxHours %}
                            {% set maxHours = day.hours %}
                        {% endif %}
                    {% endfor %}
                    
                    {% for day in weeklyBreakdown %}
                        <div class="day-bar-container">
                            {% set height = maxHours > 0 ? (day.hours / maxHours * 100) : 10 %}
                            <div class="day-bar" style="height: {{ height }}%;" 
                                 title="{{ day.dayName }}: {{ day.hours }}h">
                                {% if day.hours > 0 %}
                                    <span class="day-value">{{ day.hours }}h</span>
                                {% endif %}
                            </div>
                            <div class="day-label">{{ day.dayName|slice(0, 3) }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Time Distribution -->
            <div class="row">
                <div class="col-md-6">
                    <div class="chart-container">
                        <h3 class="h5 fw-bold mb-4">
                            <i class="bi bi-pie-chart-fill me-2" style="color: var(--primary-color);"></i>
                            Distribution du temps
                        </h3>
                        {% if analytics.distribution|length > 0 %}
                            {% for item in analytics.distribution %}
                                <div class="goal-time-card">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-bold">{{ item.goal.title }}</h6>
                                        <span class="badge bg-primary">{{ item.percentage }}%</span>
                                    </div>
                                    <div class="time-bar" style="width: {{ item.percentage }}%;">
                                        {{ analyzer.formatDuration(item.time) }}
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center py-5">
                                <i class="bi bi-inbox" style="font-size: 3rem; color: #9ca3af;"></i>
                                <p class="text-muted mt-3">Aucune donnée disponible</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="chart-container">
                        <h3 class="h5 fw-bold mb-4">
                            <i class="bi bi-speedometer2 me-2" style="color: var(--primary-color);"></i>
                            Efficacité mensuelle
                        </h3>
                        {% if monthlyData|length > 0 %}
                            {% for item in monthlyData %}
                                <div class="goal-time-card">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-bold">{{ item.goal.title }}</h6>
                                        <div>
                                            {% if item.efficiency %}
                                                {% if item.efficiency <= 100 %}
                                                    <span class="efficiency-badge efficiency-excellent">
                                                        <i class="bi bi-check-circle-fill me-1"></i>{{ item.efficiency }}%
                                                    </span>
                                                {% elseif item.efficiency <= 120 %}
                                                    <span class="efficiency-badge efficiency-good">
                                                        <i class="bi bi-dash-circle-fill me-1"></i>{{ item.efficiency }}%
                                                    </span>
                                                {% else %}
                                                    <span class="efficiency-badge efficiency-poor">
                                                        <i class="bi bi-x-circle-fill me-1"></i>{{ item.efficiency }}%
                                                    </span>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge bg-secondary">N/A</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between text-muted small">
                                        <span><i class="bi bi-clock me-1"></i>{{ item.hours }}h ce mois</span>
                                        {% if item.efficiency %}
                                            <span>
                                                {% if item.efficiency <= 100 %}
                                                    Plus rapide que prévu
                                                {% elseif item.efficiency <= 120 %}
                                                    Légèrement plus long
                                                {% else %}
                                                    Beaucoup plus long
                                                {% endif %}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center py-5">
                                <i class="bi bi-inbox" style="font-size: 3rem; color: #9ca3af;"></i>
                                <p class="text-muted mt-3">Aucune donnée ce mois</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Focus Index -->
            {% if analytics.focusIndex|length > 0 %}
                <div class="chart-container mt-4">
                    <h3 class="h5 fw-bold mb-4">
                        <i class="bi bi-star-fill me-2" style="color: var(--primary-color);"></i>
                        Time Focus Index
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Rang</th>
                                    <th>Goal</th>
                                    <th>Focus Score</th>
                                    <th>Temps total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in analytics.focusIndex %}
                                    <tr>
                                        <td>
                                            {% if item.rank == 1 %}
                                                <span class="badge" style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);">
                                                    <i class="bi bi-trophy-fill"></i> #{{ item.rank }}
                                                </span>
                                            {% elseif item.rank == 2 %}
                                                <span class="badge" style="background: linear-gradient(135deg, #d1d5db 0%, #9ca3af 100%);">
                                                    #{{ item.rank }}
                                                </span>
                                            {% elseif item.rank == 3 %}
                                                <span class="badge" style="background: linear-gradient(135deg, #fcd34d 0%, #fbbf24 100%);">
                                                    #{{ item.rank }}
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary">#{{ item.rank }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="fw-bold">{{ item.goal.title }}</td>
                                        <td>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar" style="width: {{ item.focusScore }}%; background: linear-gradient(90deg, #9333ea 0%, #7e22ce 100%);">
                                                    {{ item.focusScore }}%
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ item.totalHours }}h</td>
                                        <td>
                                            <a href="{{ path('app_time_investment_goal_details', {id: item.goal.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Détails
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
