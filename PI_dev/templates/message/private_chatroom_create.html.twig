{% extends 'base.html.twig' %}

{% block title %}Créer un sous-groupe privé{% endblock %}

{% block body %}
<style>
    .create-private-chatroom-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .page-header {
        margin-bottom: 30px;
    }

    .page-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #050505;
        margin-bottom: 8px;
    }

    .page-header p {
        color: #65676b;
        font-size: 14px;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: #050505;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #e4e6eb;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #0084ff;
        box-shadow: 0 0 0 3px rgba(0, 132, 255, 0.1);
    }

    .members-checkbox-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 12px;
        margin-top: 12px;
    }

    .members-checkbox-list input[type="checkbox"] {
        margin-right: 8px;
    }

    .members-checkbox-list label {
        display: flex;
        align-items: center;
        padding: 12px;
        background: #f0f2f5;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
        font-weight: normal;
    }

    .members-checkbox-list label:hover {
        background: #e4e6eb;
    }

    .members-checkbox-list input[type="checkbox"]:checked + label,
    .members-checkbox-list label:has(input:checked) {
        background: #e7f3ff;
        border: 1px solid #0084ff;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: #0084ff;
        color: white;
    }

    .btn-primary:hover {
        background: #0073e6;
    }

    .btn-secondary {
        background: #e4e6eb;
        color: #050505;
    }

    .btn-secondary:hover {
        background: #d0d2d6;
    }

    .help-text {
        font-size: 12px;
        color: #65676b;
        margin-top: 4px;
    }
</style>

<div class="create-private-chatroom-container">
    <div class="page-header">
        <h1>Créer un sous-groupe privé</h1>
        <p>Goal: {{ goal.title }}</p>
    </div>

    <div class="form-card">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
                <div class="help-text">Choisissez un nom descriptif pour votre sous-groupe</div>
            </div>

            <div class="form-group">
                {{ form_label(form.members) }}
                <div class="help-text" style="margin-bottom: 12px;">
                    Sélectionnez les membres qui auront accès à ce sous-groupe privé
                </div>
                {{ form_widget(form.members) }}
                {{ form_errors(form.members) }}
            </div>

            <div class="form-actions">
                <a href="{{ path('message_chatroom', {goalId: goal.id}) }}" class="btn btn-secondary">
                    Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Créer le sous-groupe
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
