{% block form_row %}
    {% set row_attr = row_attr|merge({class: (row_attr.class|default('') ~ ' mb-4')|trim}) %}
    <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{% endblock form_row %}

{% block form_label %}
    {% if label is not same as(false) %}
        {% set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' block text-sm font-medium text-gray-700 mb-2')|trim}) %}
        <label{% with {attr: label_attr} %}{{ block('attributes') }}{% endwith %}>
            {%- if translation_domain is same as(false) -%}
                {{- label -}}
            {%- else -%}
                {%- set translation_params = translation_parameters|default({}) -%}
                {{- label|trans(translation_params, translation_domain) -}}
            {%- endif -%}
            {% if required %}
                <span class="text-red-500">*</span>
            {% endif %}
        </label>
    {% endif %}
{% endblock form_label %}

{% block form_errors %}
    {%- if errors|length > 0 -%}
        <ul class="mt-1 text-sm text-red-600">
            {%- for error in errors -%}
                <li>{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{% endblock form_errors %}

{% block checkbox_row %}
    {% set row_attr = row_attr|merge({class: (row_attr.class|default('') ~ ' mb-4')|trim}) %}
    <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
        <div class="flex items-center gap-2">
            {{- form_widget(form) -}}
            {{- form_label(form) -}}
        </div>
        {{- form_errors(form) -}}
    </div>
{% endblock checkbox_row %}

{% block checkbox_widget %}
    {% set widget_attr = widget_attr|default({}) %}
    {% set widget_attr = widget_attr|merge({class: (widget_attr.class|default('') ~ ' w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500')|trim}) %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endblock checkbox_widget %}
