                <i class="bi bi-exclamation-circle-fill flex-shrink-0 mt-0.5"></i>
                <span>{{ flash_error }}</span>
            </div>
        {% endfor %}

        {{ form_start(resetForm, { 'attr': { 'class': 'space-y-5 reset-password-form' } }) }}
            <div>
                {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe', {
                    'label_attr': { 'class': 'block text-sm font-medium text-gray-600 mb-1' }
                }) }}
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'mt-1 w-full rounded-xl border border-gray-300 px-4 py-2.5 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 outline-none transition',
                        'placeholder': 'Nouveau mot de passe'
                    }
                }) }}
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>
            <div>
                {{ form_label(resetForm.plainPassword.second, 'Confirmer le mot de passe', {
                    'label_attr': { 'class': 'block text-sm font-medium text-gray-600 mb-1' }
                }) }}
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'mt-1 w-full rounded-xl border border-gray-300 px-4 py-2.5 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 outline-none transition',
                        'placeholder': 'Confirmer le mot de passe'
                    }
                }) }}
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>

            <div class="rounded-xl bg-blue-50 border border-blue-100 p-3 text-sm text-blue-800">
                <p class="font-medium mb-1">Conseils :</p>
