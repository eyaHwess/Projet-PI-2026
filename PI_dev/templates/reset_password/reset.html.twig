{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block stylesheets %}
<style>
    .reset-password-form .invalid-feedback { color: #b91c1c; font-size: 0.875rem; margin-top: 0.25rem; }
    .reset-password-form ul { list-style: none; padding: 0; margin: 0.25rem 0 0; }
    .reset-password-form ul li { color: #b91c1c; font-size: 0.875rem; }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-3.5rem)] flex items-center justify-center bg-rose-50 px-4 py-8">
    <div class="w-full max-w-md bg-white rounded-3xl shadow-xl p-8">
        <div class="text-center mb-6">
            <div class="mx-auto mb-3 h-14 w-14 rounded-full bg-blue-100 flex items-center justify-center text-2xl">
                üîê
            </div>
            <h1 class="text-2xl font-bold text-gray-800">
                Nouveau mot de passe
            </h1>
            <p class="text-sm text-gray-500 mt-2">
                Choisis un mot de passe s√©curis√© (au moins 12 caract√®res).
            </p>
        </div>

        {% for flash_error in app.flashes('reset_password_error') %}
