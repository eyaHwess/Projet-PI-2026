{% extends 'base.html.twig' %}

{% block title %}Créer un compte — DayFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .auth-root {
        min-height: 100vh;
        display: flex;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #0f0c29;
    }
    /* ── Left panel ── */
    .auth-left {
        display: none;
        width: 42%;
        background: linear-gradient(140deg, #1e1b4b 0%, #312e81 55%, #1e3a5f 100%);
        padding: 3.5rem;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
        flex-shrink: 0;
    }
    @media (min-width: 960px) { .auth-left { display: flex; } }
    .auth-left::before {
        content: '';
        position: absolute;
        top: -120px; right: -80px;
        width: 380px; height: 380px;
        background: radial-gradient(circle, rgba(99,102,241,0.25) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }
    .auth-left::after {
        content: '';
        position: absolute;
        bottom: -100px; left: -60px;
        width: 320px; height: 320px;
        background: radial-gradient(circle, rgba(124,58,237,0.2) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }
    .auth-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        position: relative;
        z-index: 1;
    }
    .auth-brand-icon {
        width: 44px; height: 44px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 12px;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.25rem;
        box-shadow: 0 8px 24px rgba(99,102,241,0.4);
    }
    .auth-brand-name {
        font-size: 1.4rem;
        font-weight: 800;
        color: white;
        letter-spacing: -0.02em;
    }
    .auth-left-body { position: relative; z-index: 1; }
    .auth-left-title {
        font-size: 2.4rem;
        font-weight: 900;
        color: white;
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin-bottom: 1.25rem;
    }
    .auth-left-title span {
        background: linear-gradient(90deg, #a5b4fc, #e879f9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .auth-left-sub {
        font-size: 1rem;
        color: rgba(255,255,255,0.6);
        line-height: 1.6;
    }
    .auth-steps {
        margin-top: 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.1rem;
    }
    .auth-step {
        display: flex;
        align-items: center;
        gap: 0.9rem;
    }
    .auth-step-num {
        width: 32px; height: 32px;
        border-radius: 8px;
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.15);
        display: flex; align-items: center; justify-content: center;
        font-size: 0.8rem;
        font-weight: 700;
        color: #a5b4fc;
        flex-shrink: 0;
    }
    .auth-step-text {
        font-size: 0.875rem;
        color: rgba(255,255,255,0.65);
        line-height: 1.4;
    }
    .auth-left-footer {
        position: relative; z-index: 1;
        font-size: 0.8rem;
        color: rgba(255,255,255,0.35);
    }
    /* ── Right panel / form ── */
    .auth-right {
        flex: 1;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        background: #fafafa;
        padding: 2.5rem 1.5rem;
        overflow-y: auto;
    }
    .auth-form-box {
        width: 100%;
        max-width: 540px;
        padding-top: 1rem;
    }
    .auth-form-header { margin-bottom: 2rem; }
    .auth-form-header h1 {
        font-size: 1.75rem;
        font-weight: 800;
        color: #111827;
        letter-spacing: -0.02em;
        margin-bottom: 0.4rem;
    }
    .auth-form-header p { font-size: 0.9rem; color: #6b7280; margin: 0; }
    .auth-alert {
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        font-size: 0.85rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
    }
    .auth-alert-error { background: #fef2f2; border: 1px solid #fecaca; color: #b91c1c; }
    .reg-section-label {
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: #9ca3af;
        margin-bottom: 0.75rem;
        margin-top: 1.5rem;
        padding-bottom: 0.4rem;
        border-bottom: 1px solid #f3f4f6;
    }
    .reg-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.85rem;
    }
    .reg-grid.full { grid-template-columns: 1fr; }
    .auth-field { margin-bottom: 0.85rem; }
    .auth-field label {
        display: block;
        font-size: 0.82rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.35rem;
    }
    .auth-field input,
    .auth-field select,
    .auth-field textarea {
        width: 100%;
        padding: 0.65rem 0.9rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.9rem;
        font-family: inherit;
        color: #111827;
        background: white;
        transition: border-color 0.2s, box-shadow 0.2s;
        outline: none;
        box-sizing: border-box;
    }
    .auth-field input:focus,
    .auth-field select:focus,
    .auth-field textarea:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99,102,241,0.12);
    }
    .auth-field input[type="file"] {
        padding: 0.5rem 0.75rem;
        cursor: pointer;
        font-size: 0.85rem;
    }
    .coach-section {
        background: linear-gradient(135deg, #eef2ff, #f5f3ff);
        border: 1px solid #c7d2fe;
        border-radius: 1rem;
        padding: 1.25rem;
        margin-top: 0.75rem;
    }
    .coach-section-title {
        font-size: 0.82rem;
        font-weight: 700;
        color: #4338ca;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }
    .auth-btn-primary {
        width: 100%;
        padding: 0.85rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border: none;
        border-radius: 0.875rem;
        font-size: 0.95rem;
        font-weight: 700;
        font-family: inherit;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 16px rgba(99,102,241,0.35);
        margin-top: 1.5rem;
    }
    .auth-btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 22px rgba(99,102,241,0.45);
    }
    .auth-footer-links {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.85rem;
        color: #9ca3af;
    }
    .auth-footer-links a { color: #6366f1; font-weight: 600; text-decoration: none; }
    .auth-footer-links a:hover { text-decoration: underline; }
    .register-form .invalid-feedback ul { list-style: none; padding: 0; margin: 0; }
    .register-form .invalid-feedback { color: #b91c1c; font-size: 0.8rem; margin-top: 0.25rem; }
    .register-form .alert-error-box ul { list-style: none; padding: 0; margin: 0; }
    .register-form .alert-error-box { color: #b91c1c; font-size: 0.85rem; }
</style>
{% endblock %}

{% block body %}
<div class="auth-root">

    {# ── Left panel ── #}
    <div class="auth-left">
        <div class="auth-brand">
            <div class="auth-brand-icon">
                <i class="bi bi-bullseye" style="color:white;"></i>
            </div>
            <span class="auth-brand-name">DayFlow</span>
        </div>

        <div class="auth-left-body">
            <h2 class="auth-left-title">
                Commencez<br>votre parcours<br><span>dès aujourd'hui.</span>
            </h2>
            <p class="auth-left-sub">
                Rejoignez des milliers d'utilisateurs qui transforment leurs routines quotidiennes en succès durables.
            </p>
            <div class="auth-steps">
                <div class="auth-step">
                    <div class="auth-step-num">1</div>
                    <div class="auth-step-text">Créez votre compte en quelques secondes</div>
                </div>
                <div class="auth-step">
                    <div class="auth-step-num">2</div>
                    <div class="auth-step-text">Complétez votre profil IA personnalisé</div>
                </div>
                <div class="auth-step">
                    <div class="auth-step-num">3</div>
                    <div class="auth-step-text">Définissez vos objectifs et routines</div>
                </div>
                <div class="auth-step">
                    <div class="auth-step-num">4</div>
                    <div class="auth-step-text">Suivez votre progression chaque jour</div>
                </div>
            </div>
        </div>

        <p class="auth-left-footer">© {{ "now"|date("Y") }} DayFlow. Tous droits réservés.</p>
    </div>

    {# ── Right panel ── #}
    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-form-header">
                <h1>Créer un compte</h1>
                <p>Rejoignez DayFlow et commencez à atteindre vos objectifs.</p>
            </div>

            {% for message in app.flashes('error') %}
                <div class="auth-alert auth-alert-error">
                    <i class="bi bi-exclamation-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}
            {% if form_errors(registrationForm)|length %}
                <div class="auth-alert auth-alert-error alert-error-box">
                    <i class="bi bi-exclamation-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                    <div>{{ form_errors(registrationForm) }}</div>
                </div>
            {% endif %}

            {{ form_start(registrationForm, { 'attr': { 'class': 'register-form' } }) }}

            <div class="reg-section-label">Informations personnelles</div>
            <div class="reg-grid">
                <div class="auth-field">
                    {{ form_errors(registrationForm.firstName) }}
                    {{ form_widget(registrationForm.firstName, { 'attr': { 'placeholder': 'Prénom', 'class': '' } }) }}
                </div>
                <div class="auth-field">
                    {{ form_errors(registrationForm.lastName) }}
                    {{ form_widget(registrationForm.lastName, { 'attr': { 'placeholder': 'Nom', 'class': '' } }) }}
                </div>
            </div>

            <div class="reg-grid full">
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div class="auth-alert auth-alert-error alert-error-box">
                        <i class="bi bi-exclamation-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                        <div>{{ form_errors(registrationForm.email) }}</div>
                    </div>
                {% endif %}
                <div class="auth-field">
                    {{ form_widget(registrationForm.email, { 'attr': { 'placeholder': 'Adresse e-mail', 'class': '' } }) }}
                </div>
            </div>

            <div class="reg-section-label">Sécurité</div>
            <div class="reg-grid full">
                {{ form_errors(registrationForm.password) }}
                <div class="auth-field">
                    {{ form_widget(registrationForm.password, { 'attr': { 'placeholder': 'Mot de passe', 'class': '' } }) }}
                </div>
            </div>

            <div class="reg-section-label">Coordonnées</div>
            <div class="reg-grid">
                <div class="auth-field">
                    {{ form_widget(registrationForm.phoneNumber, { 'attr': { 'placeholder': 'Téléphone', 'class': '' } }) }}
                </div>
                <div class="auth-field">
                    {{ form_widget(registrationForm.age, { 'attr': { 'placeholder': 'Âge', 'class': '' } }) }}
                </div>
            </div>

            <div class="reg-section-label">Photo de profil</div>
            <div class="auth-field">
                {{ form_widget(registrationForm.photoFile, { 'attr': { 'class': '' } }) }}
                {{ form_errors(registrationForm.photoFile) }}
            </div>

            <div class="reg-section-label">Type de compte</div>
            <div class="auth-field">
                {{ form_widget(registrationForm.role, { 'attr': { 'class': '' } }) }}
            </div>

            <div id="coach-fields" class="coach-section" style="display:none;">
                <div class="coach-section-title">
                    <i class="bi bi-person-badge"></i> Informations coach
                </div>
                <div class="reg-grid">
                    <div class="auth-field">
                        {{ form_widget(registrationForm.speciality, { 'attr': { 'placeholder': 'Spécialité', 'class': '' } }) }}
                    </div>
                    <div class="auth-field">
                        {{ form_widget(registrationForm.availability, { 'attr': { 'placeholder': 'Disponibilités', 'class': '' } }) }}
                    </div>
                </div>
                <div class="auth-field">
                    {{ form_widget(registrationForm.pricePerSession, { 'attr': { 'placeholder': 'Prix par session (€)', 'class': '' } }) }}
                </div>
                <div class="auth-field">
                    {{ form_widget(registrationForm.bio, { 'attr': { 'placeholder': 'Présentez-vous en quelques mots…', 'class': '', 'rows': 3 } }) }}
                </div>
            </div>

            <button type="submit" class="auth-btn-primary">
                <i class="bi bi-person-plus me-2"></i>Créer mon compte
            </button>

            <div class="auth-footer-links">
                Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener("DOMContentLoaded", function() {
    const roleSelect = document.querySelector('[name$="[role]"]');
    const coachFields = document.getElementById("coach-fields");
    function toggleCoachFields() {
        coachFields.style.display = roleSelect.value === "ROLE_COACH" ? "block" : "none";
    }
    roleSelect.addEventListener("change", toggleCoachFields);
    toggleCoachFields();
});
</script>
{% endblock %}
