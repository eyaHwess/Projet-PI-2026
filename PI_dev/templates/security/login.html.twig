{% extends 'base.html.twig' %}

{% block title %}Connexion — DayFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .auth-root {
        min-height: 100vh;
        display: flex;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #0f0c29;
    }
    /* ── Left panel ── */
    .auth-left {
        display: none;
        width: 46%;
        background: linear-gradient(140deg, #1e1b4b 0%, #312e81 55%, #1e3a5f 100%);
        padding: 3.5rem;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
    }
    @media (min-width: 900px) { .auth-left { display: flex; } }
    .auth-left::before {
        content: '';
        position: absolute;
        top: -120px; right: -80px;
        width: 380px; height: 380px;
        background: radial-gradient(circle, rgba(99,102,241,0.25) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }
    .auth-left::after {
        content: '';
        position: absolute;
        bottom: -100px; left: -60px;
        width: 320px; height: 320px;
        background: radial-gradient(circle, rgba(124,58,237,0.2) 0%, transparent 70%);
        border-radius: 50%;
        pointer-events: none;
    }
    .auth-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        position: relative;
        z-index: 1;
    }
    .auth-brand-icon {
        width: 44px; height: 44px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 12px;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.25rem;
        box-shadow: 0 8px 24px rgba(99,102,241,0.4);
    }
    .auth-brand-name {
        font-size: 1.4rem;
        font-weight: 800;
        color: white;
        letter-spacing: -0.02em;
    }
    .auth-left-body {
        position: relative;
        z-index: 1;
    }
    .auth-left-title {
        font-size: 2.6rem;
        font-weight: 900;
        color: white;
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin-bottom: 1.25rem;
    }
    .auth-left-title span {
        background: linear-gradient(90deg, #a5b4fc, #e879f9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .auth-left-sub {
        font-size: 1rem;
        color: rgba(255,255,255,0.6);
        line-height: 1.6;
        max-width: 360px;
    }
    .auth-feature-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 2.5rem;
    }
    .auth-feature-item {
        display: flex;
        align-items: center;
        gap: 0.65rem;
        font-size: 0.875rem;
        color: rgba(255,255,255,0.7);
    }
    .auth-feature-item .dot {
        width: 8px; height: 8px;
        border-radius: 50%;
        background: #818cf8;
        flex-shrink: 0;
    }
    .auth-left-footer {
        position: relative;
        z-index: 1;
        font-size: 0.8rem;
        color: rgba(255,255,255,0.35);
    }
    /* ── Right panel ── */
    .auth-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
        padding: 2.5rem 1.5rem;
    }
    .auth-form-box {
        width: 100%;
        max-width: 420px;
    }
    .auth-form-header {
        margin-bottom: 2rem;
    }
    .auth-form-header h1 {
        font-size: 1.75rem;
        font-weight: 800;
        color: #111827;
        letter-spacing: -0.02em;
        margin-bottom: 0.4rem;
    }
    .auth-form-header p {
        font-size: 0.9rem;
        color: #6b7280;
        margin: 0;
    }
    .auth-alert {
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        font-size: 0.85rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
    }
    .auth-alert-success { background: #f0fdf4; border: 1px solid #bbf7d0; color: #15803d; }
    .auth-alert-error   { background: #fef2f2; border: 1px solid #fecaca; color: #b91c1c; }
    .auth-field {
        margin-bottom: 1.1rem;
    }
    .auth-field label {
        display: block;
        font-size: 0.82rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.4rem;
        letter-spacing: 0.01em;
    }
    .auth-field input {
        width: 100%;
        padding: 0.7rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.95rem;
        font-family: inherit;
        color: #111827;
        background: white;
        transition: border-color 0.2s, box-shadow 0.2s;
        outline: none;
        box-sizing: border-box;
    }
    .auth-field input:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99,102,241,0.12);
    }
    .auth-forgot {
        text-align: right;
        margin-top: -0.5rem;
        margin-bottom: 1.25rem;
    }
    .auth-forgot a {
        font-size: 0.82rem;
        color: #6366f1;
        text-decoration: none;
        font-weight: 500;
    }
    .auth-forgot a:hover { text-decoration: underline; }
    .auth-btn-primary {
        width: 100%;
        padding: 0.8rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border: none;
        border-radius: 0.875rem;
        font-size: 0.95rem;
        font-weight: 700;
        font-family: inherit;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 16px rgba(99,102,241,0.35);
        letter-spacing: 0.01em;
    }
    .auth-btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 22px rgba(99,102,241,0.45);
    }
    .auth-divider {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 1.5rem 0;
    }
    .auth-divider::before, .auth-divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: #e5e7eb;
    }
    .auth-divider span {
        font-size: 0.78rem;
        color: #9ca3af;
        font-weight: 500;
        white-space: nowrap;
    }
    .auth-btn-google {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        padding: 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.875rem;
        background: white;
        color: #374151;
        font-size: 0.9rem;
        font-weight: 600;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s;
    }
    .auth-btn-google:hover {
        border-color: #d1d5db;
        background: #f9fafb;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        color: #374151;
    }
    .auth-footer-links {
        text-align: center;
        margin-top: 1.75rem;
        font-size: 0.85rem;
        color: #9ca3af;
    }
    .auth-footer-links a {
        color: #6366f1;
        font-weight: 600;
        text-decoration: none;
    }
    .auth-footer-links a:hover { text-decoration: underline; }
</style>
{% endblock %}

{% block body %}
<div class="auth-root">

    {# ── Left panel ── #}
    <div class="auth-left">
        <div class="auth-brand">
            <div class="auth-brand-icon">
                <i class="bi bi-bullseye" style="color:white;"></i>
            </div>
            <span class="auth-brand-name">DayFlow</span>
        </div>

        <div class="auth-left-body">
            <h2 class="auth-left-title">
                Organisez<br>votre quotidien<br><span>avec intention.</span>
            </h2>
            <p class="auth-left-sub">
                Transformez vos ambitions en habitudes concrètes grâce à des objectifs structurés et un suivi intelligent.
            </p>
            <div class="auth-feature-list">
                <div class="auth-feature-item"><span class="dot"></span> Objectifs & routines personnalisés</div>
                <div class="auth-feature-item"><span class="dot"></span> Suivi de progression en temps réel</div>
                <div class="auth-feature-item"><span class="dot"></span> Profil IA généré par vos réponses</div>
                <div class="auth-feature-item"><span class="dot"></span> Coaching personnalisé disponible</div>
            </div>
        </div>

        <p class="auth-left-footer">© {{ "now"|date("Y") }} DayFlow. Tous droits réservés.</p>
    </div>

    {# ── Right panel ── #}
    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-form-header">
                <h1>Bon retour</h1>
                <p>Connectez-vous pour reprendre là où vous vous êtes arrêté.</p>
            </div>

            {% for message in app.flashes('success') %}
                <div class="auth-alert auth-alert-success">
                    <i class="bi bi-check-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}
            {% for message in app.flashes('login_error') %}
                <div class="auth-alert auth-alert-error">
                    <i class="bi bi-exclamation-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}
            {% if error %}
                <div class="auth-alert auth-alert-error">
                    <i class="bi bi-exclamation-circle-fill" style="flex-shrink:0;margin-top:1px;"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                <div class="auth-field">
                    <label for="login-email">Adresse e-mail</label>
                    <input id="login-email" type="email" name="email" value="{{ last_username }}" required autofocus placeholder="vous@exemple.com">
                </div>
                <div class="auth-field">
                    <label for="login-password">Mot de passe</label>
                    <input id="login-password" type="password" name="password" required placeholder="••••••••">
                </div>
                <div class="auth-forgot">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="auth-btn-primary">Se connecter</button>
            </form>

            <div class="auth-divider"><span>ou continuer avec</span></div>

            <a href="{{ path('connect_google') }}" class="auth-btn-google">
                <svg width="18" height="18" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Se connecter avec Google
            </a>

            <div class="auth-footer-links">
                Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a>
            </div>
        </div>
    </div>

</div>
{% endblock %}
